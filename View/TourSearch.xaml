<Window x:Class="BookingApp.View.TourSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TourGuide - Dobrodošli na TourGuide!" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Background="#F5F5F5">

            <!-- Header Section -->
            <Border Background="White" Padding="20,15">
                <DockPanel>
                    <TextBlock Text="Dobrodošli na TourGuide!" FontSize="28" FontWeight="Bold" 
                               VerticalAlignment="Center" DockPanel.Dock="Left"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Button Name="btnTutorijal" Background="#3498DB" Foreground="White" Padding="10,5" Click="BtnTutorijal_Click" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../Resources/Images/video.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Pogledajte tutorijal" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Border Background="#D0D0D0" Width="40" Height="40" CornerRadius="20" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Moj profil" Click="MenuItemMojProfil_Click"/>
                                    <MenuItem Header="Promena lozinke" Click="MenuItemPromenaLozinke_Click"/>
                                    <Separator/>
                                    <MenuItem Header="Odjava" Click="MenuItemOdjava_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Image Source="../Resources/Images/user.png" Width="20" Height="20" 
                                   MouseRightButtonDown="ProfileIcon_MouseRightButtonDown"/>
                        </Border>
                        <Button Name="btnOdjava" Content="Odjava" Background="#E74C3C" Foreground="White" Padding="10,5" Click="BtnOdjava_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Navigation Menu -->
            <Border Background="#E8E8E8" BorderBrush="#D0D0D0" BorderThickness="0,1,0,1" Padding="20,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btnPretraziteTure" Background="#2E86C1" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" FontWeight="Bold" Click="BtnPretraziteTure_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="PRETRAŽITE TURE" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnRezervacije" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnRezervacije_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="REZERVACIJE" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnOceniTuru" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnOceniTuru_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="OCENI TURU" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnPracenjeTure" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnPracenjeTure_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="PRAĆENJE TURE" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnNoviZahtev" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnNoviZahtev_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="NOVI ZAHTEV" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnObavestenja" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnObavestenja_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="OBAVEŠTENJA" TextAlignment="Center"/>
                    </Button>
                    <Button Name="btnStatistika" Background="#95A5A6" Foreground="White" Padding="20,12" Margin="8,0"
                            BorderBrush="Transparent" Click="BtnStatistika_Click"
                            MinWidth="140" HorizontalContentAlignment="Center">
                        <TextBlock Text="STATISTIKA" TextAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Promo Banner -->
            <Border Background="White" Margin="20" Padding="20" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="DOM ZA VAŠE SLEDEĆE PUTOVANJE" FontSize="16" FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Sve dostupne apartmane, vile, kuće i ostalo možete pogledati na ovom sajtu" 
                               FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
                    <Border Background="#F0F0F0" Height="400" CornerRadius="5" BorderBrush="#D0D0D0" BorderThickness="1">
                        <Image x:Name="promoBannerImage" Source="../Resources/Images/promo-banner.jpg" 
                               Stretch="UniformToFill" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Search and Results Section -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Search Panel -->
                <Border Grid.Column="0" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Image Source="../Resources/Images/search.png" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="PRETRAGA TURA" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Image Source="../Resources/Images/info.png" Width="12" Height="12" Margin="0,0,5,0"/>
                            <TextBlock Text="Ovde možete pronaći sve dostupne ture i odmah ih rezervisati!" 
                                       FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Grad:" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                            <TextBox Name="txtGrad" Background="LightGray" Padding="8" FontSize="12" Text="npr. Beograd"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Država:" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                            <TextBox Name="txtDrzava" Background="LightGray" Padding="8" FontSize="12" Text="npr. Srbija"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Trajanje (h):" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                            <TextBox Name="txtTrajanje" Background="LightGray" Padding="8" FontSize="12" Text=""/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Broj ljudi:" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                            <TextBox Name="txtBrojLjudi" Background="LightGray" Padding="8" FontSize="12" Text="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Izaberite jezik:" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                            <ComboBox Name="cmbJezik" Background="LightGray" Padding="8" FontSize="12" SelectedIndex="0">
                                <ComboBoxItem Content="srpski"/>
                                <ComboBoxItem Content="engleski"/>
                                <ComboBoxItem Content="nemački"/>
                                <ComboBoxItem Content="francuski"/>
                            </ComboBox>
                        </StackPanel>

                        <Button Name="btnPretrazi" Content="PRETRAŽI" 
                                Background="#2E86C1" Foreground="White" FontWeight="Bold"
                                Padding="20,12" FontSize="12" Click="BtnPretrazi_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Results Panel -->
                <Border Grid.Column="1" Background="White" Padding="20" Margin="10,0,0,0" CornerRadius="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Image Source="../Resources/Images/list.png" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Rezultati pretrage:" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="pnlResults"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Preporučeno Section (6 cards in a row) -->
            <Border Background="White" Margin="20" Padding="20" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Preporučeno" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sarajevo -->
                        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/sarajevo.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Sarajevo" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 305 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Beč -->
                        <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/bec.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Beč" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 520 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Budimpešta -->
                        <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/budimpesta.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Budimpešta" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 350 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Rim -->
                        <Border Grid.Column="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/rim.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Rim" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 890 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Barcelona -->
                        <Border Grid.Column="4" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/barcelona.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Barcelona" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 1450 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Amsterdam -->
                        <Border Grid.Column="5" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="5" CornerRadius="5">
                            <StackPanel>
                                <Border Height="80" Background="#F0F0F0" CornerRadius="5,5,0,0">
                                    <Image Source="../Resources/Images/amsterdam.jpg" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel Margin="10">
                                    <TextBlock Text="Amsterdam" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="Na 1320 km" FontSize="9" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Reservation Section (side by side) -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- My Reservations Panel -->
                <Border Grid.Column="0" Background="White" Padding="20" Margin="0,0,10,0" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="MOJE REZERVACIJE" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="pnlMyReservations"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Reservation Panel - sada uvek vidljiv -->
                <Border Grid.Column="1" Name="reservationPanel" Background="White" Padding="20" 
                        Margin="10,0,0,0" CornerRadius="5" Visibility="Visible">
                    <StackPanel>
                        <TextBlock Text="REZERVACIJA TURE" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

                        <!-- Tour Info - sada sa placeholder tekstom -->
                        <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                            <StackPanel Name="tourInfoPanel">
                                <TextBlock Name="lblTourName" Text="Izaberite turu za rezervaciju" 
                                           FontWeight="Bold" FontSize="14" Foreground="Gray"/>
                                <TextBlock Name="lblTourDetails" Text="Kliknite na 'REZERVIŠI' dugme kod bilo koje ture" 
                                           FontSize="12" Foreground="Gray"/>
                                <TextBlock Name="lblAvailableSpots" Text="" 
                                           FontSize="12" Foreground="Green" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Number of People -->
                        <StackPanel Name="peopleCountPanel" Orientation="Horizontal" Margin="0,0,0,15" IsEnabled="False">
                            <TextBlock Text="Koliko osoba ide na turu?" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Name="btnDecrease" Content="−" Width="30" Height="30" Click="BtnDecrease_Click" Margin="5,0"/>
                            <TextBox Name="txtModalBrojOsoba" Text="1" Width="50" Height="30" TextAlignment="Center" 
                                     VerticalAlignment="Center" TextChanged="TxtModalBrojOsoba_TextChanged"/>
                            <Button Name="btnIncrease" Content="+" Width="30" Height="30" Click="BtnIncrease_Click" Margin="5,0"/>
                        </StackPanel>

                        <!-- Guest Details -->
                        <StackPanel Name="guestDetailsPanel" IsEnabled="False">
                            <TextBlock Text="Podaci o učesnicima ture" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ScrollViewer Name="guestScrollViewer" Height="200" VerticalScrollBarVisibility="Auto">
                                <StackPanel Name="pnlGuestDetails"/>
                            </ScrollViewer>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Name="buttonPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" IsEnabled="False">
                            <Button Name="btnCancelReservation" Background="#6C757D" Foreground="White" Padding="15,8" Margin="10,0"
                                    Click="BtnCancelReservation_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OBRIŠI UNOS" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Name="btnPotvrdiRezervaciju" Background="#28A745" Foreground="White" Padding="15,8" Margin="10,0"
                                    Click="BtnPotvrdiRezervaciju_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="POTVRDI REZERVACIJU" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>