<Page x:Class="BookingApp.View.Guide.CreateTourForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Create Tour"
      Height="750"
      Width="430"
      Background="White">

    <DockPanel>

        <!-- Top Banner -->
        <Border Background="#2C3E50" Height="40" DockPanel.Dock="Top">
            <Grid>
                <TextBlock Text="BookingApp"
                           Foreground="White"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Content="?" Width="30" Margin="0,0,5,0"/>
                    <Button Content="⎋" Width="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" Orientation="Vertical">

                <TextBlock Text="Create a New Tour" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                <!-- Name -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Name:" Width="100"/>
                    <TextBox x:Name="NameTextBox" Width="200"/>
                </StackPanel>

                <!-- Location -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="City:" Width="100"/>
                    <TextBox x:Name="CityTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Country:" Width="100"/>
                    <TextBox x:Name="CountryTextBox" Width="200"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Description:" Width="100"/>
                    <TextBox x:Name="DescriptionTextBox" AcceptsReturn="True" Height="60" Width="200" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Language -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Language:" Width="100"/>
                    <TextBox x:Name="LanguageTextBox" Width="200"/>
                </StackPanel>

                <!-- Tourists -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Max Tourists:" Width="100"/>
                    <TextBox x:Name="TouristsTextBox" Width="50"/>
                </StackPanel>

                <!-- Start Date and Time -->
                <GroupBox Header="Start Date and Time" Margin="0,10,0,0">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <DatePicker x:Name="StartDatePicker" Width="120"/>
                            <TextBox x:Name="StartTimeHourTextBox" Width="40" Margin="10,0,0,0"/>
                            <TextBox x:Name="StartTimeMinuteTextBox" Width="40" Margin="10,0,0,0"/>
                            <Button Content="Add" Width="60" Margin="10,0,0,0" Click="AddStartTime_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <ListBox x:Name="StartTimesListBox" Height="60" Width="250" HorizontalAlignment="Left"/>
                            <Button Content="Remove" Width="70" Margin="10,0,0,0" Click="RemoveStartTourTime_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Duration -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Duration:" Width="100"/>
                    <TextBox x:Name="DurationTextBox" Width="50"/>
                    <Label Content="h" Width="20"/>
                </StackPanel>

                <!-- Key Points -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Key Point:" Width="100"/>
                    <TextBox x:Name="KeyPointTextBox" Width="180"/>
                    <Button Content="Add" Width="40" Click="AddKeyPoint_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <ListBox x:Name="KeyPointsListBox" Width="150" Height="60" Margin="100,5,0,0"/>
                    <Button Content="Remove" Width="100" Height="50" Click="RemoveKeyPoint_Click"/>
                </StackPanel>

                <!-- Image Path & Display -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Image Path:"/>
                    <TextBox x:Name="ImagePathTextBox" Width="300"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <Button Content="Add Image" Click="AddImage_Click" Width="100"/>
                        <Button Content="Remove Selected" Click="RemoveImage_Click" Margin="10,0,0,0" Width="120"/>
                    </StackPanel>

                    <ListBox x:Name="ImagesListBox" Height="200" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path}" Width="90" Height="90" Margin="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Buttons at the bottom -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                    <Button Content="Create Tour" Width="100" Height="30" Margin="10" Click="CreateTour_Click"/>
                    <Button Content="Cancel" Width="100" Height="30" Margin="10" Click="Cancel_Click"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
