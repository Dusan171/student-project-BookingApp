<Page x:Class="BookingApp.View.Guide.TourLiveTracking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LiveTrackingPage"
      Width="430" Height="750" Background="White">

    <DockPanel>

        <!-- Top Banner -->
        <Border Background="#2C3E50" Height="40" DockPanel.Dock="Top">
            <Grid>
                <Button Content="←" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"
                        Click="BackButton_Click"/>
                <TextBlock Text="BookingApp"
                           Foreground="White"
                           FontSize="18"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Content="?" Width="30" Margin="0,0,5,0" Click="HelpButton_Click"/>
                    <Button Content="Logout" Width="60" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stop Tour button docked at bottom center -->
        <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,20" HorizontalAlignment="Center">
            <Button Content="Stop Tour"
                    Width="150"
                    Height="40"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="StopTourButton_Click"/>
        </StackPanel>

        <!-- Main content scrollable and fills rest of space -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15" VerticalAlignment="Top">

                <TextBlock Text="Live Tracking" FontSize="22" FontWeight="Bold" Margin="0,20,0,15" HorizontalAlignment="Center"/>

                <!-- Tour Details -->
                <StackPanel Margin="10" Background="#eee" >
                    <TextBlock x:Name="TourNameTextBlock" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="TourDateTimeTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourLanguageTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourLocationTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourDurationTextBlock" Margin="0,5,0,0"/>
                </StackPanel>

                <TextBlock Text="Key Points" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>

                <!-- KeyPoints CheckBoxes -->
                <StackPanel x:Name="KeyPointsPanel" />

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Page>
