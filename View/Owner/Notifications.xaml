<UserControl x:Class="BookingApp.View.Owner.Notifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.View.Owner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#f2f4f8">
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#f2f4f8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="NotificationsPanel" />
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
