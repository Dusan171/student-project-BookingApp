<Window x:Class="BookingApp.View.CreateTourForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Tour" Height="850" Width="600"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,-128">
        <Grid Margin="15" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Tour fields -->
                <RowDefinition Height="Auto"/>
                <!-- KeyPoints -->
                <RowDefinition Height="Auto"/>
                <!-- Images -->
                <RowDefinition Height="Auto"/>
                <!-- StartTourTimes -->
                <RowDefinition Height="Auto"/>
                <!-- Save Button -->
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Create New Tour" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Name:" Width="120"/>
                    <TextBox x:Name="NameTextBox" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Location ID:" Width="120"/>
                    <TextBox x:Name="LocationIdTextBox" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Description:" Width="120"/>
                    <TextBox x:Name="DescriptionTextBox" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Language:" Width="120"/>
                    <TextBox x:Name="LanguageTextBox" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Max Tourists:" Width="120"/>
                    <TextBox x:Name="MaxTouristsTextBox" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Duration (Hours):" Width="120"/>
                    <TextBox x:Name="DurationHoursTextBox" Width="400"/>
                </StackPanel>
            </StackPanel>

            <!-- KeyPoints -->
            <GroupBox Header="KeyPoints" Grid.Row="1" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="KeyPointNameTextBox" Width="300"/>
                        <Button Content="Add KeyPoint" Width="100" Margin="10,0,0,0" Click="AddKeyPoint_Click"/>
                    </StackPanel>
                    <ListBox x:Name="KeyPointsListBox" Height="100"/>
                </StackPanel>
            </GroupBox>

            <!-- Images -->
            <GroupBox Header="Images" Grid.Row="2" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="ImagePathTextBox" Width="300" />
                        <Button Content="Add Image" Width="100" Margin="10,0,0,0" Click="AddImage_Click"/>
                    </StackPanel>
                    <ListBox x:Name="ImagesListBox" Height="100"/>
                </StackPanel>
            </GroupBox>

            <!-- StartTourTimes -->
            <GroupBox Header="Start Tour Times" Grid.Row="3" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <DatePicker x:Name="StartTimeDatePicker" Width="160"/>
                        <TextBox x:Name="StartTimeHourTextBox" Width="60" Margin="10,0,0,0" />
                        <TextBox x:Name="StartTimeMinuteTextBox" Width="60" Margin="10,0,0,0" />
                        <Button Content="Add Start Time" Width="120" Margin="10,0,0,0" Click="AddStartTime_Click"/>
                    </StackPanel>
                    <ListBox x:Name="StartTimesListBox" Height="100"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <!-- Save, Cancel i Logout Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Save Tour" Width="120" Height="35" Margin="5" Click="SaveTour_Click"/>
                <Button Content="Cancel" Width="120" Height="35" Margin="5" Click="Cancel_Click"/>
                <Button Content="Logout" Width="120" Height="35" Margin="5" Click="Logout_Click"/>
            </StackPanel>


        </Grid>
    </ScrollViewer>
</Window>
