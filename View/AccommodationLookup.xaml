<Window x:Class="BookingApp.View.AccommodationLookup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        Title="AccommodationLookup" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.005"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="46"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Labels -->
            <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBlock Text="Country:" Grid.Row="0" Grid.Column="1" Margin="5"/>
            <TextBlock Text="City:" Grid.Row="0" Grid.Column="2" Margin="5"/>
            <TextBlock Text="Type:" Grid.Row="0" Grid.Column="3" Margin="5"/>
            <TextBlock Text="Max Guests:" Grid.Row="0" Grid.Column="4" Margin="5"/>
            <TextBlock Text="Min Days:" Grid.Row="0" Grid.Column="5" Margin="5"/>

            <!-- Input Fields -->
            <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="0" Width="100" Margin="5"/>
            <TextBox x:Name="CountryTextBox" Grid.Row="1" Grid.Column="1" Width="100" Margin="5"/>
            <TextBox x:Name="CityTextBox" Grid.Row="1" Grid.Column="2" Width="100" Margin="5"/>

            <ComboBox x:Name="TypeComboBox" Grid.Row="1" Grid.Column="3" Width="100" Margin="5">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="APARTMENT" />
                <ComboBoxItem Content="HOUSE"/>
                <ComboBoxItem Content="COTTAGE"/>
            </ComboBox>

            <TextBox x:Name="MaxGuestsTextBox" Grid.Row="1" Grid.Column="4" Width="90" Margin="5"/>
            <TextBox x:Name="MinDaysTextBox" Grid.Row="1" Grid.Column="5" Width="90" Margin="5"/>

            <Button Content="Search" Grid.Row="1" Grid.Column="6" Width="60" Margin="5" Click="SearchButton_Click"/>
        </Grid>

        <Button Content="Logout" Width="49" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" Click="LogoutButton_Click" Margin="0,5,5,0"/>

        <StackPanel Grid.Row="1">
            <DataGrid x:Name="AccommodationsDataGrid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Height="300"
              Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="City" Binding="{Binding GeoLocation.City}"/>
                    <DataGridTextColumn Header="Country" Binding="{Binding GeoLocation.Country}"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Max Guests" Binding="{Binding MaxGuests}"/>
                    <DataGridTextColumn Header="Min Days" Binding="{Binding MinReservationDays}"/>
                    <DataGridTextColumn Header="CancelDeadline" Binding="{Binding CancellationDeadlineDays}"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Reserve"
            Width="100"
            Height="30"
            HorizontalAlignment="Center"
            Click="ReserveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>