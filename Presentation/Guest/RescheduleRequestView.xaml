<Window x:Class="BookingApp.Presentation.Guest.RescheduleRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Request Reservation Change" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" MinHeight="320" MinWidth="400">

    <Window.Resources>
        <!-- Definišemo stilove za konzistentnost -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <!-- DockPanel je idealan za ovakav raspored -->
    <DockPanel Margin="15">

        <!-- DUGMIĆI: "Zalepljeni" za dno -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Send Request" IsDefault="True" Click="SendRequest_Click"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>

        <!-- GLAVNI SADRŽAJ: Zauzima sav preostali prostor -->
        <StackPanel>
            <TextBlock Text="Request to Reschedule Reservation" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- GRUPA SA INFORMACIJAMA O REZERVACIJI -->
            <GroupBox Header="Current Reservation">
                <StackPanel Margin="5">
                    <TextBlock>
                        <Run Text="Accommodation:"/>
                        <Run x:Name="AccommodationNameTextBlock" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Period:"/>
                        <Run x:Name="CurrentPeriodTextBlock" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </GroupBox>

            <!-- GRUPA ZA UNOS NOVIH DATUMA -->
            <GroupBox Header="Select New Dates">
                <!-- UniformGrid osigurava da su obe kolone jednake širine -->
                <UniformGrid Columns="2" Rows="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="New Start Date:"/>
                        <DatePicker x:Name="NewStartDatePicker"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="New End Date:"/>
                        <DatePicker x:Name="NewEndDatePicker"/>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>

        </StackPanel>
    </DockPanel>
</Window>