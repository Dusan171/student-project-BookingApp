<Window x:Class="BookingApp.Presentation.Guest.OwnerReviewDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recenzija Vlasnika" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Border Padding="15">
        <StackPanel MinWidth="300">
            <TextBlock Text="Recenzija Vlasnika" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Ocena za čistoću: " FontWeight="Medium"/>
                <TextBlock Grid.Column="1" Text="{Binding CleanlinessRating}" Margin="10,0,0,0" FontWeight="Bold"/>
            </Grid>

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Poštovanje pravila: " FontWeight="Medium"/>
                <TextBlock Grid.Column="1" Text="{Binding RuleRespectingRating}" Margin="10,0,0,0" FontWeight="Bold"/>
            </Grid>

            <TextBlock Text="Komentar:" FontWeight="Medium" Margin="0,15,0,5"/>
            <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Background="#f0f0f0" Padding="8" Margin="0,0,0,15" MinHeight="60"/>

            <Button Content="U redu" IsDefault="True" Click="OkButton_Click" HorizontalAlignment="Right" Width="90"/>
        </StackPanel>
    </Border>
</Window>
