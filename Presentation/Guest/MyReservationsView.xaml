<Window x:Class="BookingApp.Presentation.Guest.MyReservationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Reservations" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ReservationsDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" ItemsSource="{Binding MyReservationsDisplay}">
            <DataGrid.Columns>
                <!-- Ažurirane i nove kolone -->
                <DataGridTextColumn Header="Accommodation" Binding="{Binding AccommodationName}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="Guests" Binding="{Binding GuestsNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Reschedule Status" Binding="{Binding RequestStatusText}" Width="*"/>
                <DataGridTextColumn Header="Owner's Comment" Binding="{Binding OwnerComment}" Width="*"/>

                <!-- Kolona sa dugmetom za pomeranje -->
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Reschedule" 
                                    Click="RescheduleButton_Click"
                                    IsEnabled="{Binding IsRescheduleEnabled}"
                                    ToolTip="Request to change reservation dates"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Rate" Width="100" Margin="5" Click="RateButton_Click"/>
            <Button x:Name="ViewReview" Content="View Review" Width="120" Margin="5" Click="ViewReviewButton_Click"/>
            <Button Content="Close" Width="100" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>

    </Grid>
</Window>