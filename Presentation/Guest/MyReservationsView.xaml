<Window x:Class="BookingApp.Presentation.Guest.MyReservationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyReservations" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ReservationsDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Accommodation ID" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="*"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="*"/>
                <DataGridTextColumn Header="Guests" Binding="{Binding GuestsNumber}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Rate" Width="100" Margin="5" Click="RateButton_Click"/>
            <Button x:Name="ViewReview" Content="Vidi recenziju" Width="120" Margin="5" Click="ViewReviewButton_Click"/>
            <Button Content="Close" Width="100" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
