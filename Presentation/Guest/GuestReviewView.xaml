<Window x:Class="BookingApp.Presentation.Guest.GuestReviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leave a Review" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" MinHeight="400" MinWidth="300">

    <Window.Resources>
        <!-- Definišemo stilove da izbegnemo ponavljanje -->
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <!-- DockPanel je idealan za ovakav raspored -->
    <DockPanel Margin="15">

        <!-- DUGMIĆI: "Zalepljeni" za dno -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SubmitButton" Content="Submit" IsDefault="True" Click="Submit_Click"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>

        <!-- GLAVNI SADRŽAJ: Zauzima sav preostali prostor -->
        <!-- Grid će nam omogućiti da pravilno rasporedimo visinu -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Red za ocenu čistoće -->
                <RowDefinition Height="Auto"/>
                <!-- Red za ocenu vlasnika -->
                <RowDefinition Height="*"/>
                <!-- Red za komentar (zauzima pola preostalog prostora) -->
                <RowDefinition Height="*"/>
                <!-- Red za slike (zauzima pola preostalog prostora) -->
            </Grid.RowDefinitions>

            <!-- OCENA ČISTOĆE -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Cleanliness Rating (1-5):"/>
                <TextBox x:Name="CleanlinessTextBox" MaxWidth="100"/>
            </StackPanel>

            <!-- OCENA VLASNIKA -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Owner Rating (1-5):"/>
                <TextBox x:Name="OwnerTextBox" MaxWidth="100"/>
            </StackPanel>

            <!-- KOMENTAR -->
            <!-- Ovaj StackPanel i TextBox će se sada rastezati vertikalno -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Comment:"/>
                <TextBox x:Name="CommentTextBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </StackPanel >

            <!-- SLIKE -->
            <!-- I ovaj će se rastezati, deleći prostor sa komentarom -->
            <StackPanel Grid.Row="3">
                <TextBlock Text="Image Paths (separated by ;):"/>
                <TextBox x:Name="ImagesTextBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>