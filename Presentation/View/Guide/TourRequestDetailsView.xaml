<Page x:Class="BookingApp.Presentation.View.Guide.TourRequestDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:BookingApp.Utilities"
      Title="Tour Request"
      Background="#FFF5F5F5">

    <Page.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" HorizontalAlignment="Center" Width="360">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <TextBlock Text="Tour Request" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>
                
                <Border CornerRadius="15" 
                        Padding="12,6" 
                        Margin="0,0,0,0"
                        VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FFA500"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusText}" Value="ACCEPTED">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusText}" Value="PENDING">
                                    <Setter Property="Background" Value="#FFA500"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusText}" Value="INVALID">
                                    <Setter Property="Background" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding StatusText}" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               FontSize="12"/>
                </Border>
            </StackPanel>

            <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Tour details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding DateFrom, StringFormat=Date from: {0:dd.MM.yyyy}}" Margin="0,2"/>
                    <TextBlock Text="{Binding DateTo, StringFormat=Date to: {0:dd.MM.yyyy}}" Margin="0,2"/>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}, {1}">
                                <Binding Path="City"/>
                                <Binding Path="Country"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="{Binding Language, StringFormat=Language: {0}}" Margin="0,2"/>
                    <TextBlock Text="{Binding NumberOfPeople, StringFormat=Participants: {0}}" Margin="0,2"/>
                    <TextBlock Text="Description:" Margin="0,6,0,2" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Tourist details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding RequestedBy}" Margin="0,2"/>
                    <TextBlock Text="Participants:" Margin="0,6,0,4" FontWeight="SemiBold"/>
                    <ItemsControl ItemsSource="{Binding Participants}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="4,2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}, {2} years">
                                            <Binding Path="FirstName"/>
                                            <Binding Path="LastName"/>
                                            <Binding Path="Age"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" 
                    Background="#E8F5E8" 
                    BorderBrush="#4CAF50" 
                    BorderThickness="1" 
                    Padding="12" 
                    Margin="0,0,0,16"
                    Visibility="{Binding IsAccepted, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Acceptance details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8" Foreground="#2E7D32"/>
                    <TextBlock Text="{Binding AcceptedByGuide, StringFormat=Accepted by: {0}}" Margin="0,2"/>
                    <TextBlock Text="{Binding AcceptedDate, StringFormat=Accepted on: {0}}" Margin="0,2"/>
                    <TextBlock Text="{Binding ScheduledDate, StringFormat=Scheduled for: {0}}" Margin="0,2"/>
                </StackPanel>
            </Border>

            <Button Content="Accept" 
                    Width="140" 
                    Height="42" 
                    HorizontalAlignment="Center"
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Accept this tour request"
                    Command="{Binding AcceptCommand}"
                    Margin="0,8,0,0"
                    Visibility="{Binding CanAccept, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            
            <Border CornerRadius="8" 
                    Background="#FFE0B2" 
                    BorderBrush="#FF9800" 
                    BorderThickness="1" 
                    Padding="12" 
                    Margin="0,8,0,0"
                    Visibility="{Binding CanAccept, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                <TextBlock Text="This tour request has already been processed." 
                           TextAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="#E65100"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
