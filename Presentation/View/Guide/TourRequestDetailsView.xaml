<Page x:Class="BookingApp.Presentation.View.Guide.TourRequestDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Tour Request"
      Background="#FFF5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" HorizontalAlignment="Center" Width="360">

            <TextBlock Text="Tour Request" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       TextAlignment="Left"
                       Margin="0,0,0,16"
                       Foreground="#333"/>

            <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Tour details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Date: {0:dd.MM.yyyy} - {1:dd.MM.yyyy}">
                                <Binding Path="DateFrom"/>
                                <Binding Path="DateTo"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Location: {0}, {1}">
                                <Binding Path="City"/>
                                <Binding Path="Country"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="{Binding Language, StringFormat=Language: {0}}" Margin="0,2"/>
                    <TextBlock Text="{Binding NumberOfPeople, StringFormat=Participants: {0}}" Margin="0,2"/>
                    <TextBlock Text="Description:" Margin="0,6,0,2"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Background="White" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Tourist details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding RequestedBy, StringFormat=Request by: {0}}" Margin="0,2"/>
                    <TextBlock Text="Participants:" Margin="0,6,0,4"/>
                    <ItemsControl ItemsSource="{Binding Participants}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="4,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Button Content="Accept" Width="140" Height="42" HorizontalAlignment="Center"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Accept this tour request"
                    Command="{Binding AcceptCommand}"
                    Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
