<Page x:Class="BookingApp.Presentation.View.Guide.StatisticsSelectionControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:BookingApp.Utilities"
      Background="White">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="Tour Statistics">
                <ScrollViewer>
                    <StackPanel Margin="10">

                        <TextBlock Text="Tour Statistics"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
                            <TextBlock Text="Filter by year:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                            <ComboBox Width="120"
                                      ItemsSource="{Binding Years}"
                                      SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                                      Padding="5"
                                      FontSize="14"
                                      ToolTip="Select a year to filter tours"/>
                        </StackPanel>

                        <TextBlock Text="Most Visited Tour"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <Border CornerRadius="10" Background="White" 
                                BorderBrush="#DDDDDD" BorderThickness="1" 
                                Padding="10" Margin="0,0,0,15">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Width="80" Height="80" Margin="0,0,15,0"
                                       Source="{Binding MostVisitedTour.Images[0].Path}" 
                                       Stretch="UniformToFill"
                                       ClipToBounds="True"
                                       ToolTip="Double-click to preview image">
                                    <Image.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                      CommandParameter="{Binding MostVisitedTour.Images[0].Path}"/>
                                    </Image.InputBindings>
                                </Image>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MostVisitedTour.Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding MostVisitedTour.StartTimes[0].Time}" FontSize="14" Foreground="Gray"/>
                                    <TextBlock Text="{Binding MostVisitedTour.Language}" FontSize="14" Foreground="Gray"/>
                                    <TextBlock Text="{Binding MostVisitedTour.DurationHours, StringFormat=Duration: {0}h}" FontSize="14" Foreground="Gray"/>
                                </StackPanel>
                                <Button Content="Details" Width="90" Height="30" Margin="10,0,0,0"
                                    Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding MostVisitedTour}"
                                    Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                                    Cursor="Hand"
                                    ToolTip="View details about this tour"
                                    Style="{StaticResource HoverButtonStyle}"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Other Tours"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding OtherTours}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Background="White"
                                            BorderBrush="#DDDDDD" BorderThickness="1"
                                            Padding="10" Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Width="70" Height="70" Margin="0,0,15,0"
                                                   Source="{Binding Images[0].Path}"
                                                   Stretch="UniformToFill"
                                                   ClipToBounds="True"
                                                   ToolTip="Double-click to preview image">
                                                <Image.InputBindings>
                                                    <MouseBinding MouseAction="LeftDoubleClick"
                                                                  Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                  CommandParameter="{Binding Images[0].Path}"/>
                                                </Image.InputBindings>
                                            </Image>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15"/>
                                                <TextBlock Text="{Binding StartTimes[0].Time}" FontSize="13" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Language}" FontSize="13" Foreground="Gray"/>
                                                <TextBlock Text="{Binding DurationHours, StringFormat=Duration: {0}h}" FontSize="13" Foreground="Gray"/>
                                            </StackPanel>
                                            <Button Content="Details" Width="80" Height="28" Margin="20,0,0,0"
                                                    Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                                                    Cursor="Hand"
                                                    ToolTip="View details about this tour"
                                                    Style="{StaticResource HoverButtonStyle}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Request Statistics">
                <StackPanel>
                    <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,15" ItemHeight="30" ItemWidth="Auto">
                        <TextBlock Text="Filter by:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>

                        <RadioButton Content="Location"
                                     IsChecked="{Binding FilterByLocation, Mode=TwoWay}"
                                     GroupName="FilterType" Margin="0,0,10,0" VerticalAlignment="Center"
                                     ToolTip="Filter requests by location"/>

                        <RadioButton Content="Language"
                                     IsChecked="{Binding FilterByLocation, Converter={StaticResource InverseBooleanConverter}, Mode=TwoWay}"
                                     GroupName="FilterType" Margin="0,0,20,0" VerticalAlignment="Center"
                                     ToolTip="Filter requests by language"/>

                        <ComboBox Width="140" Margin="0,0,10,0"
                                  ItemsSource="{Binding AvailableLocations}" 
                                  SelectedItem="{Binding SelectedLocation}"
                                  Visibility="{Binding FilterByLocation, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ToolTip="Select a location"/>

                        <ComboBox Width="140" Margin="0,0,10,0"
                                  ItemsSource="{Binding AvailableLanguages}" 
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                  Visibility="{Binding FilterByLocation, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                  ToolTip="Select a language"/>

                        <Button Content="Filter"
                                Command="{Binding ApplyRequestFilterCommand}"
                                Width="120" Height="30"
                                Background="#007ACC" Foreground="White"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                ToolTip="Apply selected filter"
                                Style="{StaticResource HoverButtonStyle}"/>
                        <Button Content="Refresh"
                                Width="100" Height="30"
                                Background="#28A745" Foreground="White"
                                FontWeight="SemiBold"
                                Command="{Binding RefreshRequestStatsCommand}"
                                Cursor="Hand"
                                ToolTip="Reload request statistics"
                                Style="{StaticResource HoverButtonStyle}"/>
                    </WrapPanel>

                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <TextBlock Text="Request Statistics"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding YearlyRequestStatsList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,10">
                                            <Button Command="{Binding DataContext.ToggleYearExpansionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    HorizontalAlignment="Left"
                                                    Padding="10,5"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Expand/collapse details for this year">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Year}" Margin="0,0,10,0"/>
                                                    <TextBlock Text="(" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding TotalRequests}" Foreground="Gray"/>
                                                    <TextBlock Text=" requests)" Foreground="Gray"/>
                                                </StackPanel>
                                            </Button>

                                            <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                        Margin="20,5,0,10">
                                                <ItemsControl ItemsSource="{Binding MonthlyRequests}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                                <TextBlock Text="{Binding Key}" Width="100"/>
                                                                <TextBlock Text="{Binding Value}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <Border CornerRadius="10" VerticalAlignment="Bottom" BorderBrush="#DDDDDD" BorderThickness="1" Background="#F9F9F9" Padding="10" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="📈 Most Requested in the Last Year" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="In the past year, we've identified a growing interest in a specific travel preference. We recommend creating a new tour to meet this demand and attract more tourists."
                                           TextWrapping="Wrap" FontSize="13" Foreground="Gray" Width="350"/>
                                <Button Content="Create Tour Based On Suggestion"
                                        Width="220" Height="32" Margin="0,5,0,0" HorizontalAlignment="Left"
                                        Command="{Binding CreateTourSuggestionCommand}"
                                        Background="#007ACC" Foreground="White"
                                        Cursor="Hand"
                                        ToolTip="Create a new tour based on system suggestion"
                                        Style="{StaticResource HoverButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
