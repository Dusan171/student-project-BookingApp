        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15" VerticalAlignment="Top">

                <TextBlock Text="Live Tracking" FontSize="22" FontWeight="Bold" Margin="0,20,0,15" HorizontalAlignment="Center"/>

                <StackPanel Margin="10" Background="#eee" >
                    <TextBlock x:Name="TourNameTextBlock" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="TourDateTimeTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourLanguageTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourLocationTextBlock" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TourDurationTextBlock" Margin="0,5,0,0"/>
                </StackPanel>

                <TextBlock Text="Key Points" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>

                <StackPanel x:Name="KeyPointsPanel" />

                <Button Name="TouristButton" Content="Check Tourists"
                        Width="150"
                        Height="40"
                        Margin="0,20,0,0"
                        Background="Blue"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="TouristsButton_Click"/>
            </StackPanel>
            
        </ScrollViewer>
        <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,20" HorizontalAlignment="Center">
            <Button Content="Stop Tour"
                    Width="150"
                    Height="40"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="StopTourButton_Click"/>
        </StackPanel>
    </DockPanel>
</UserControl>
