<Page x:Class="BookingApp.Presentation.View.Guide.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Background="White">
        <Grid Height="50" Background="#FF2D2D30" VerticalAlignment="Top">
            <TextBlock Text="BookingApp" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button Content="?" Width="30" Margin="0,0,5,0"/>
                <Button Content="⎋" Width="30"/>
            </StackPanel>
        </Grid>

        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Margin="10,60,10,60" />

        <DockPanel Height="50" VerticalAlignment="Bottom" Background="#FF2D2D30">
            <Button DockPanel.Dock="Left" Content="📍" FontSize="20" Width="85" Background="Transparent" Foreground="White" Click="Tours_Click"/>
            <Button DockPanel.Dock="Left" Content="⭐" FontSize="20" Width="85" Background="Transparent" Foreground="White" Click="Reviews_Click"/>
            <Button DockPanel.Dock="Left" Content="❌" FontSize="20" Width="85" Background="Transparent" Foreground="White" Click="Statistics_Click"/>
            <Button DockPanel.Dock="Left" Content="📷" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
            <Button DockPanel.Dock="Left" Content="⚙️" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
        </DockPanel>
    </Grid>
</Page>
