<Page x:Class="BookingApp.Presentation.View.Guide.TourDetailsControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Guide"
      Background="#FAFAFA">

    <Page.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.08" ScaleY="1.08"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Tour Details" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#212121"
                       Margin="0,0,0,15"/>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,0,15" >
                <StackPanel>
                    <TextBlock Text="{Binding TourName}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#000000"/>
                    <TextBlock Text="{Binding TourDate}" Foreground="#616161"/>
                    <TextBlock Text="{Binding TourDuration}" Foreground="#616161"/>
                    <TextBlock Text="{Binding TotalTourists}" Foreground="#616161"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Tourist Age Statistics:" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#212121" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Under18}" Foreground="#424242"/>
                    <TextBlock Text="{Binding Between18And50}" Foreground="#424242"/>
                    <TextBlock Text="{Binding Above50}" Foreground="#424242"/>
                </StackPanel>
            </Border>

            <Button Content="Back" 
                    Height="45"
                    Width="120"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Go back to previous page"
                    Click="BackButton_Click"
                    Style="{StaticResource HoverButtonStyle}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
