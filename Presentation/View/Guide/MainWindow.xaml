<Page x:Class="BookingApp.View.Guide.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Background="White">
        <Grid Height="50" Background="#FF2D2D30" VerticalAlignment="Top">
            <TextBlock Text="BookingApp" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button Content="?" Width="30" Margin="0,0,5,0"/>
                <Button Content="⎋" Width="30"/>
            </StackPanel>
        </Grid>

        <StackPanel Margin="10,60,10,60">
            <DockPanel Margin="0,0,0,10">
                <TextBlock Text="Tours" FontSize="20" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <Button Content="New Tour" HorizontalAlignment="Right" DockPanel.Dock="Right" Padding="10,2" Click="NewTour_Click"/>
            </DockPanel>

            <ComboBox x:Name="TourFilterComboBox" HorizontalAlignment="Left" Width="150">
                <ComboBoxItem Content="Tours Today" IsSelected="True"/>
                <ComboBoxItem Content="All Tours"/>
            </ComboBox>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="540">
                <ItemsControl x:Name="TourListPanel"/>
            </ScrollViewer>
        </StackPanel>

        <Border x:Name="LiveTrackingOverlay" Background="White" Visibility="Collapsed" Panel.ZIndex="999">
            <Frame x:Name="LiveTrackingFrame" NavigationUIVisibility="Hidden" />
        </Border>

        <Border x:Name="CreateTourOverlay" Background="White" Visibility="Collapsed" Panel.ZIndex="999">
            <Frame x:Name="CreateTourFrame" NavigationUIVisibility="Hidden"/>
        </Border>

        <DockPanel Height="50" VerticalAlignment="Bottom" Background="#FF2D2D30">
            <Button DockPanel.Dock="Left" Content="📍" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
            <Button DockPanel.Dock="Left" Content="⭐" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
            <Button DockPanel.Dock="Left" Content="❌" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
            <Button DockPanel.Dock="Left" Content="📷" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
            <Button DockPanel.Dock="Left" Content="⚙️" FontSize="20" Width="85" Background="Transparent" Foreground="White"/>
        </DockPanel>
    </Grid>
</Page>
