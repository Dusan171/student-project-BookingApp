<Page x:Class="BookingApp.Presentation.View.Guide.TourRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      Title="Tour Requests"
      Background="#FFF2F2F2">

    <Page.Resources>
        <Style TargetType="Button" x:Key="AnimatedButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <TabControl Background="Transparent" BorderThickness="0">
            <TabItem Header="Simple Requests">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Padding="12" BorderBrush="#EEE" BorderThickness="0" CornerRadius="12" Background="White" Margin="0,0,0,12">
                        <WrapPanel VerticalAlignment="Center" ItemHeight="32" ItemWidth="Auto" Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Location:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBox Width="140" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" ToolTip="Enter City"
                                         Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1"/>
                                <TextBox Width="140" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" ToolTip="Enter Country" Margin="6,0,0,0"
                                         Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Language:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Width="120" Text="{Binding Language}" Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" ToolTip="Enter Language"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="People:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <xctk:IntegerUpDown Value="{Binding NumerOfPeople, UpdateSourceTrigger=PropertyChanged}"
                                                    Minimum="1" Maximum="100"
                                                    Width="70" Height="22" HorizontalAlignment="Center"
                                                    ToolTip="Number of People"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Date range:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <DatePicker SelectedDate="{Binding DateFrom}" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Padding="2" ToolTip="From Date"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="6,0"/>
                                <DatePicker SelectedDate="{Binding DateTo}" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Padding="2" ToolTip="To Date"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <Button Content="Filter" Command="{Binding FilterSimpleCommand}" Margin="8,0,0,0"
                                        Background="#007ACC" Foreground="White" Padding="6,2" BorderThickness="0"
                                        Style="{StaticResource AnimatedButton}" ToolTip="Apply filters"/>
                                <Button Content="Refresh" Command="{Binding LoadCommand}" Margin="6,0,0,0"
                                        Background="#03DAC5" Foreground="White" Padding="6,2" BorderThickness="0"
                                        Style="{StaticResource AnimatedButton}" ToolTip="Reload requests"/>
                            </StackPanel>
                        </WrapPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Requests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#DDD" BorderThickness="0" Padding="12" Margin="0,0,0,12" CornerRadius="12">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="16" Foreground="#333">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="Tour of {0}, {1}">
                                                        <Binding Path="City"/>
                                                        <Binding Path="Country"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <TextBlock Margin="0,4,0,0" Foreground="#555">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0:dd.MM.yyyy} - {1:dd.MM.yyyy}">
                                                        <Binding Path="DateFrom"/>
                                                        <Binding Path="DateTo"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <TextBlock Text="{Binding TouristName, StringFormat=Tourist: {0}}" Margin="0,4,0,0" Foreground="#555"/>

                                            <Button Content="View Details"
                                                    Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding Id}" Margin="0,8,0,0"
                                                    Background="#007ACC" Foreground="White" Padding="6,4" BorderThickness="0"
                                                    Style="{StaticResource AnimatedButton}" ToolTip="View request details"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Complex Requests">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Padding="12" BorderBrush="#EEE" BorderThickness="0" CornerRadius="12" Background="White" Margin="0,0,0,12">
                        <WrapPanel VerticalAlignment="Center" ItemHeight="32" ItemWidth="Auto" Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Location:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBox Width="140" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" ToolTip="Enter City"
                                         Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1"/>
                                <TextBox Width="140" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" ToolTip="Enter Country" Margin="6,0,0,0"
                                         Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Language:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Width="120" Text="{Binding Language}" Padding="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" ToolTip="Enter Language"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="People:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <xctk:IntegerUpDown Value="{Binding NumerOfPeople, UpdateSourceTrigger=PropertyChanged}"
                                                    Minimum="1" Maximum="100"
                                                    Width="70" Height="22" HorizontalAlignment="Center"
                                                    ToolTip="Number of People"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <TextBlock Text="Date range:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <DatePicker SelectedDate="{Binding DateFrom}" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Padding="2" ToolTip="From Date"/>
                                <TextBlock Text="-" VerticalAlignment="Center" Margin="6,0"/>
                                <DatePicker SelectedDate="{Binding DateTo}" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Padding="2" ToolTip="To Date"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,8">
                                <Button Content="Filter" Command="{Binding FilterComplexCommand}" Margin="8,0,0,0"
                                        Background="#007ACC" Foreground="White" Padding="6,2" BorderThickness="0"
                                        Style="{StaticResource AnimatedButton}" ToolTip="Apply filters"/>
                                <Button Content="Refresh" Command="{Binding LoadCommand}" Margin="6,0,0,0"
                                        Background="#03DAC5" Foreground="White" Padding="6,2" BorderThickness="0"
                                        Style="{StaticResource AnimatedButton}" ToolTip="Reload requests"/>
                            </StackPanel>
                        </WrapPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ComplexRequests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#DDD" BorderThickness="0" Padding="12" Margin="0,0,0,12" CornerRadius="12">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="16" Foreground="#333" Text="{Binding Id, StringFormat=Complex request #{0}}"/>

                                            <TextBlock Margin="4,4,0,0" Foreground="#555">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0:dd.MM.yyyy} - {1:dd.MM.yyyy}">
                                                        <Binding Path="DateFrom"/>
                                                        <Binding Path="DateTo"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <TextBlock Text="{Binding TouristName, StringFormat=Tourist: {0}}" Margin="0,4,0,0" Foreground="#555"/>

                                            <Button Content="View Parts"
                                                    Command="{Binding DataContext.ViewComplexPartsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding Id}" Margin="0,8,0,0"
                                                    Background="#007ACC" Foreground="White" Padding="6,4" BorderThickness="0"
                                                    Style="{StaticResource AnimatedButton}" ToolTip="View request parts"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
