<UserControl x:Class="BookingApp.Presentation.View.Guide.Controls.BasicInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="Name:" Width="100"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="220" Height="30" ToolTip="Enter the tour name"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="City:" Width="100"/>
            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditableLocation}" Width="220" Height="30" ToolTip="Enter the city where the tour takes place"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="Country:" Width="100"/>
            <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditableLocation}" Width="220" Height="30" ToolTip="Enter the country of the tour"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="Description:" Width="100"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="220" Height="60" AcceptsReturn="True" TextWrapping="Wrap" ToolTip="Provide a short description of the tour"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="Language:" Width="100"/>
            <TextBox Text="{Binding Language, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditableLanguage}" Width="220" Height="30" ToolTip="Language in which the tour will be conducted"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <Label Content="Max Tourists:" Width="100"/>
            <xctk:IntegerUpDown Value="{Binding MaxTourists, UpdateSourceTrigger=PropertyChanged}" Minimum="1" Maximum="1000" Width="70" Height="30" ToolTip="Maximum number of tourists allowed"/>
        </StackPanel>
    </StackPanel>

</UserControl>