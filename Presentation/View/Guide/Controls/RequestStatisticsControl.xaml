<UserControl x:Class="BookingApp.Presentation.View.Guide.Controls.RequestStatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookingApp.Utilities">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/StatisticsSelectionStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filter Controls -->
        <WrapPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,15" ItemHeight="30" ItemWidth="Auto">
            <TextBlock Text="Filter by:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
            <RadioButton Content="Location" IsChecked="{Binding FilterByLocation, Mode=TwoWay}" GroupName="FilterType" Margin="0,0,10,0" VerticalAlignment="Center" ToolTip="Filter requests by location"/>
            <RadioButton Content="Language" IsChecked="{Binding FilterByLocation, Converter={StaticResource InverseBooleanConverter}, Mode=TwoWay}" GroupName="FilterType" Margin="0,0,20,0" VerticalAlignment="Center" ToolTip="Filter requests by language"/>
            <ComboBox Width="140" Margin="0,0,10,0" ItemsSource="{Binding AvailableLocations}" SelectedItem="{Binding SelectedLocation}" Visibility="{Binding FilterByLocation, Converter={StaticResource BooleanToVisibilityConverter}}" ToolTip="Select a location"/>
            <ComboBox Width="140" Margin="0,0,10,0" ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" Visibility="{Binding FilterByLocation, Converter={StaticResource InverseBoolToVisibilityConverter}}" ToolTip="Select a language"/>
            <Button Content="Filter" Command="{Binding ApplyRequestFilterCommand}" Width="120" Height="30" Style="{StaticResource PrimaryButtonStyle}" ToolTip="Apply selected filter"/>
            <Button Content="Refresh" Width="100" Height="30" Command="{Binding RefreshRequestStatsCommand}" Style="{StaticResource SuccessButtonStyle}" ToolTip="Reload request statistics"/>
        </WrapPanel>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="10">
                <TextBlock Text="Request Statistics" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                <!-- Yearly Statistics -->
                <ItemsControl ItemsSource="{Binding YearlyRequestStatsList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10">
                                <Button Command="{Binding DataContext.ToggleYearExpansionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Padding="10,5" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Expand/collapse details for this year">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Year}" Margin="0,0,10,0"/>
                                        <TextBlock Text="(" Foreground="Gray"/>
                                        <TextBlock Text="{Binding TotalRequests}" Foreground="Gray"/>
                                        <TextBlock Text=" requests)" Foreground="Gray"/>
                                    </StackPanel>
                                </Button>
                                <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="20,5,0,10">
                                    <ItemsControl ItemsSource="{Binding MonthlyRequests}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <TextBlock Text="{Binding Key}" Width="100"/>
                                                    <TextBlock Text="{Binding Value}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Suggestion Card -->
                <Border Style="{StaticResource SuggestionCardStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="?? Most Requested in the Last Year" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="In the past year, we've identified a growing interest in a specific travel preference. We recommend creating a new tour to meet this demand and attract more tourists." TextWrapping="Wrap" FontSize="13" Foreground="Gray" Width="350"/>
                            <Button Content="Create Tour Based On Suggestion" Width="220" Height="32" Margin="0,5,0,0" HorizontalAlignment="Left" Command="{Binding CreateTourSuggestionCommand}" Style="{StaticResource PrimaryButtonStyle}" ToolTip="Create a new tour based on system suggestion"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>