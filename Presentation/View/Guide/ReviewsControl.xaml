<UserControl x:Class="BookingApp.Presentation.View.Guide.ReviewsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <StackPanel Margin="0">
        <TextBlock Text="Reviews" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="540">
            <ItemsControl x:Name="ReviewsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Margin="0,0,0,10" Padding="10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding TouristName}" FontWeight="Bold" />
                                    <TextBlock Text="INVALID" Foreground="Red" FontWeight="Bold" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Text="{Binding TourName}" />
                                <TextBlock Text="Key Point: " FontWeight="Bold">
                                    <Run Text="{Binding KeyPointJoinedAt}"/>
                                </TextBlock>

                                <TextBlock Text="{Binding GuideKnowledgeRating, StringFormat=Guide knowledge: {0}}"/>
                                <TextBlock Text="{Binding GuideLanguageRating, StringFormat=Guide language: {0}}"/>
                                <TextBlock Text="{Binding TourInterestRating, StringFormat='Interesting: {0}'}"/>
                                <TextBlock Text="Comment:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                                <Button Content="Report" Width="80" HorizontalAlignment="Right"
                                        Click="ReportButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
