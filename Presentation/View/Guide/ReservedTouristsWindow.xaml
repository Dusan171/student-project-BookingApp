<Page x:Class="BookingApp.Presentation.View.Guide.ReservedTouristsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Guide"
      Background="#FFF5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reserved Tourists"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GuestViewModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <CheckBox Content="{Binding FullName}"
                                      IsChecked="{Binding HasAppeared, Mode=TwoWay}"
                                      Width="160"
                                      ToolTip="Mark if the tourist has arrived"/>
                            <ComboBox ItemsSource="{Binding AvailableKeyPoints}"
                                      SelectedValue="{Binding SelectedKeyPointId, Mode=TwoWay}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      Width="160"
                                      Margin="10,0,0,0"
                                      IsEnabled="{Binding HasAppeared}"
                                      ToolTip="Select key point visited by the tourist"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Save" Width="120" Height="40" Margin="5" Background="#4CAF50" Foreground="White" BorderThickness="0"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="120" Height="40" Margin="5" Background="#F44336" Foreground="White" BorderThickness="0"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Page>
