<Window x:Class="BookingApp.Presentation.View.Guide.ReservedTouristsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reserved Tourists"
        Height="400" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Red za naslov (auto visina) -->
            <RowDefinition Height="Auto"/>
            <!-- Red za listu (uzima sav preostali prostor) -->
            <RowDefinition Height="*"/>
            <!-- Red za dugmad (auto visina) -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="Reserved Tourists:"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <!-- Lista gostiju u ScrollViewer-u -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="1">
            <StackPanel x:Name="GuestsPanel"/>
        </ScrollViewer>

        <!-- Dugmad -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,10,10"
                    Grid.Row="2">
            <Button Content="Save" Height="30" Width="75" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Height="30" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
