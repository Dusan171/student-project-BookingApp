<UserControl x:Class="BookingApp.Presentation.View.Owner.RegisterAccommodationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200"
             FocusManager.FocusedElement="{Binding ElementName=txtName}"
             KeyboardNavigation.TabNavigation="Local">

    <UserControl.Resources>
        <utilities:LocationConverter x:Key="LocationConverter"/>
        <utilities:ImagePathConverter x:Key="ImagePathConverter"/>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#cbd5e1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" 
                                x:Name="border">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#94a3b8"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#f1f5f9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1e40af"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}" 
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1d4ed8"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#60a5fa"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#cbd5e1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#64748b"/>
            <Setter Property="BorderBrush" Value="#cbd5e1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}" 
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f8fafc"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#94a3b8"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding ConfirmCommand}"/>
    </UserControl.InputBindings>

    <Grid Background="#f8fafc">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="60,50,60,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,10,0,30">
                    <Button HorizontalAlignment="Left" 
                            Content="← Back" 
                            Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="12,8"/>
                    <TextBlock Text="Add New Accommodation" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#1e293b" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Form -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#e2e8f0" 
                            BorderThickness="1" 
                            CornerRadius="16" 
                            Padding="40">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Property Name -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Accommodation Name *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,8"/>
                                <TextBox x:Name="txtName"
                                         Text="{Binding Accommodation.Name, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="1"/>
                            </StackPanel>

                            <!-- Location -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Location *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Accommodation.GeoLocation, UpdateSourceTrigger=LostFocus, Converter={StaticResource LocationConverter}}" 
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="2">
                                    <TextBox.ToolTip>
                                        <ToolTip Content="Format: City, Country (e.g., Belgrade, Serbia)"/>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <TextBlock Text="Format: City, Country" 
                                           FontSize="12" 
                                           Foreground="#94a3b8" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Type -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Accommodation Type *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,8"/>
                                <ComboBox SelectedValue="{Binding Accommodation.Type}" 
                                          SelectedValuePath="Tag" 
                                          Padding="12,10" 
                                          BorderBrush="#cbd5e1" 
                                          BorderThickness="1" 
                                          Background="White"
                                          FontSize="14"
                                          TabIndex="3">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton Name="ToggleButton" 
                                                                          Grid.Column="2"
                                                                          Focusable="false"
                                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                          ClickMode="Press">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="White" 
                                                                                BorderBrush="#cbd5e1" 
                                                                                BorderThickness="1" 
                                                                                CornerRadius="8"
                                                                                x:Name="border">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition Width="Auto"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <ContentPresenter Grid.Column="0" 
                                                                                                  Content="{TemplateBinding Content}"
                                                                                                  Margin="12,10,0,10"/>
                                                                                <Path Grid.Column="1" 
                                                                                      Data="M 0 0 L 4 4 L 8 0" 
                                                                                      Stroke="#64748b" 
                                                                                      StrokeThickness="2"
                                                                                      Margin="0,0,12,0"
                                                                                      VerticalAlignment="Center"/>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="border" Property="BorderBrush" Value="#94a3b8"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <ContentPresenter Name="ContentSite"
                                                                              IsHitTestVisible="False"
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              Margin="12,10"/>
                                                            <Popup Name="Popup"
                                                                   Placement="Bottom"
                                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                   AllowsTransparency="True"
                                                                   Focusable="False"
                                                                   PopupAnimation="Slide"
                                                                   MinWidth="{TemplateBinding ActualWidth}">
                                                                <Border Background="White" 
                                                                        BorderBrush="#e2e8f0" 
                                                                        BorderThickness="1" 
                                                                        CornerRadius="8"
                                                                        Margin="0,4,0,0">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="16"/>
                                                                    </Border.Effect>
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                    <ComboBoxItem Content="Apartment" Tag="APARTMENT"/>
                                    <ComboBoxItem Content="House" Tag="HOUSE"/>
                                    <ComboBoxItem Content="Cottage" Tag="COTTAGE"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Number Inputs -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Max Guests *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#374151" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding Accommodation.MaxGuests}" 
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="4" 
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Min Days *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#374151" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding Accommodation.MinReservationDays}" 
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="5" 
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Cancel Days *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#374151" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding Accommodation.CancellationDeadlineDays}" 
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="6" 
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>
                            </Grid>

                            <!-- Images Upload -->
                            <StackPanel Margin="0,4,0,24">
                                <TextBlock Text="Accommodation Images" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,8"/>
                                <Button Content="📷  Choose Images" 
                                        Command="{Binding BrowseImagesCommand}" 
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left"
                                        TabIndex="7"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Cancel" 
                                        Command="{Binding CancelCommand}" 
                                        Style="{StaticResource SecondaryButton}"
                                        TabIndex="8"/>

                                <Button Grid.Column="2"
                            Content="Add" 
                            Command="{Binding ConfirmCommand}" 
                            Style="{StaticResource PrimaryButton}"
                            TabIndex="9">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#2563eb" Offset="0"/>
                                            <GradientStop Color="#1e40af" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Right Column - Preview -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            BorderBrush="#e2e8f0" 
                            BorderThickness="1" 
                            CornerRadius="16" 
                            Padding="32">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.08" BlurRadius="16"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Preview Header -->
                            <Border Grid.Row="0" 
                                    Background="#f8fafc" 
                                    BorderBrush="#e2e8f0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,0,0,16" 
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Image Preview" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#1e293b"/>
                                    <TextBlock Text="Selected images will appear here" 
                                               FontSize="13" 
                                               Foreground="#64748b" 
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Image List with Scroll -->
                            <ScrollViewer Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding ImagePaths}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#fafbfc" 
                                                    BorderBrush="#e2e8f0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="12" 
                                                    Padding="12" 
                                                    Margin="0,0,0,12">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="180"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Border Grid.Row="0" 
                                                            Background="#e2e8f0" 
                                                            CornerRadius="8" 
                                                            ClipToBounds="True">
                                                        <Grid>
                                                            <Border Background="#f1f5f9">
                                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                    <TextBlock Text="🖼️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                                                    <TextBlock Text="Image Preview" FontSize="12" Foreground="#94a3b8" HorizontalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <Image Stretch="UniformToFill">
                                                                <Image.Source>
                                                                    <Binding Path="Path" Converter="{StaticResource ImagePathConverter}"/>
                                                                </Image.Source>
                                                                <Image.Style>
                                                                    <Style TargetType="Image">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="Source" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>
                                                        </Grid>
                                                    </Border>

                                                    <Grid Grid.Row="1" Margin="0,12,0,0">
                                                        <TextBlock Text="{Binding Path}" 
                                                                   FontSize="11" 
                                                                   Foreground="#64748b" 
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"/>

                                                        <Button HorizontalAlignment="Right"
                                                                Content="✕" 
                                                                Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                CommandParameter="{Binding}" 
                                                                Background="#fee2e2" 
                                                                Foreground="#dc2626" 
                                                                Width="28" 
                                                                Height="28" 
                                                                FontSize="12"
                                                                FontWeight="Bold"
                                                                BorderThickness="0" 
                                                                Cursor="Hand">
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="6" 
                                                                            x:Name="border">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="border" Property="Background" Value="#fecaca"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <StackPanel Grid.Row="1" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePaths.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="📷" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                                <TextBlock Text="No images selected yet" 
                                           FontSize="16" 
                                           FontWeight="Medium"
                                           Foreground="#94a3b8" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,12,0,0"/>
                                <TextBlock Text="Click 'Choose Images' to add photos" 
                                           FontSize="13" 
                                           Foreground="#cbd5e1" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>