<Window x:Class="BookingApp.Presentation.View.Owner.PDFSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.Presentation.View.Owner"
        xmlns:viewModel="clr-namespace:BookingApp.Presentation.ViewModel.Owner"
        mc:Ignorable="d"
        Title="Generate PDF Report" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Grid Background="#f0f2f5" Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="PDF Report Settings" 
                       FontSize="20" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       Foreground="#1e293b"/>

            <TextBlock Text="Select Date Range:" 
                       FontSize="14" 
                       Margin="0,0,0,5" 
                       Foreground="#475569"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0" 
                            SelectedDate="{Binding FromDate, Mode=TwoWay}" 
                            Margin="0,0,5,10"
                            Padding="5"
                            FontSize="14"/>

                <DatePicker Grid.Column="1" 
                            SelectedDate="{Binding ToDate, Mode=TwoWay}" 
                            Margin="5,0,0,10"
                            Padding="5"
                            FontSize="14"/>
            </Grid>

            <Button Content="Generate Report" 
                    Command="{Binding GenerateCommand}" 
                    Margin="0,10,0,0" 
                    Width="200" 
                    Height="35" 
                    FontWeight="SemiBold"
                    Foreground="White"
                    BorderThickness="0"
                       HorizontalAlignment="Center">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1e40af" Offset="0"/>
                        <GradientStop Color="#3b82f6" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
             
            </Button>

            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Margin="0,5,0,0" 
                    Width="200" 
                    Height="35" 
                    FontWeight="SemiBold"
                    Background="LightGray"
                    Foreground="#333"
                    BorderThickness="0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>