<UserControl x:Class="BookingApp.Presentation.View.Owner.RequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:BookingApp.Presentation.ViewModel.Owner"
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:RequestsViewModel}"
             Height="600" Width="1000">

    <UserControl.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Style za centriranje ćelija -->
        <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Style za DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#1e293b"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="8,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1e293b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style za dugmad -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056B3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RejectButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ApproveButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SubmitButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="MinWidth" Value="120"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Requests"
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#1e293b"
                   Margin="0,0,0,30"/>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Requests}"
                  SelectedItem="{Binding SelectedRequest}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="50,0,50,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Accommodation Name" 
                                    Binding="{Binding AccommodationName}" 
                                    Width="180"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                <DataGridTextColumn Header="Check-in Date" 
                                    Binding="{Binding OriginalStartDate, StringFormat='dd/MM/yyyy'}" 
                                    Width="*"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                <DataGridTextColumn Header="Check-out Date" 
                                    Binding="{Binding OriginalEndDate, StringFormat='dd/MM/yyyy'}" 
                                    Width="*"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                <DataGridTextColumn Header="New Check-in" 
                                    Binding="{Binding NewStartDate, StringFormat='dd/MM/yyyy'}" 
                                    Width="*"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                <DataGridTextColumn Header="New Check-out" 
                                    Binding="{Binding NewEndDate, StringFormat='dd/MM/yyyy'}" 
                                    Width="*"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                <DataGridTextColumn Header="Availability" 
                                    Binding="{Binding AvailabilityStatus}" 
                                    Width="*"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action panel -->
        <Grid Grid.Row="2" Margin="50,25,50,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Reject button -->
            <Button Grid.Column="0"
                    Content="Reject" 
                    Command="{Binding RejectCommand}" 
                    Style="{StaticResource RejectButton}"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center"/>

            <!-- Rejection reason panel -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="25,0"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="{Binding IsRejecting, Converter={StaticResource BooleanToVisibilityConverter}}">

                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Enter reason for rejection:" 
                               FontSize="13"
                               Foreground="#1e293b"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding RejectReason, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="350" 
                             Height="60" 
                             Padding="10"
                             FontSize="13"
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             BorderBrush="#CED4DA"
                             BorderThickness="1"/>
                </StackPanel>

                <Button Content="Submit" 
                        Command="{Binding SubmitRejectCommand}" 
                        Style="{StaticResource SubmitButton}"
                        Margin="15,28,0,0" 
                        VerticalAlignment="Bottom"/>
            </StackPanel>

            <!-- Approve button -->
            <Button Grid.Column="2"
                    Content="Approve" 
                    Command="{Binding ApproveCommand}" 
                    Style="{StaticResource ApproveButton}"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
