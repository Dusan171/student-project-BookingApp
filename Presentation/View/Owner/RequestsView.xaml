<UserControl x:Class="BookingApp.Presentation.View.Owner.RequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:BookingApp.Presentation.ViewModel.Owner"
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:RequestsViewModel}"
             Height="600" Width="1000">

    <UserControl.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Requests"
                   FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,60,0,10"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Requests}"
                  SelectedItem="{Binding SelectedRequest}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Margin="40,40,40,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Accommodation Name" Binding="{Binding AccommodationName}" Width="*"/>
                <DataGridTextColumn Header="Check-in date" Binding="{Binding OriginalStartDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="Check-out date" Binding="{Binding OriginalEndDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="New check-in date" Binding="{Binding NewStartDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="New check-out date" Binding="{Binding NewEndDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="Availability" Binding="{Binding AvailabilityStatus}" Width="*"/>
                </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="40,20,40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="56*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Reject" Command="{Binding RejectCommand}" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Visibility="{Binding IsRejecting, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.RowSpan="2">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Enter reason for rejection:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding RejectReason, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="200" MinHeight="50" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="228"/>
                </StackPanel>
                <Button Content="Submit" Command="{Binding SubmitRejectCommand}" Margin="10,0,0,0" VerticalAlignment="Bottom" MinWidth="100" Width="150"/>
            </StackPanel>

            <Button Grid.Column="2" Content="Approve" Command="{Binding ApproveCommand}" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2"/>
        </Grid>
    </Grid>
</UserControl>