<Window x:Class="BookingApp.Presentation.View.Owner.OwnerDashboard" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewModel="clr-namespace:BookingApp.Presentation.ViewModel.Owner" 
        xmlns:view="clr-namespace:BookingApp.Presentation.View.Owner" 
        xmlns:utilities="clr-namespace:BookingApp.Utilities" 
        mc:Ignorable="d" Title="Booking App" Background="#f8fafc" 
        WindowState="Maximized" 
        ResizeMode="CanResize">

    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Home"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Accommodations"/>
        <KeyBinding Key="D3" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Requests"/>
        <KeyBinding Key="D4" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Statistics"/>
        <KeyBinding Key="D5" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Reviews"/>
        <KeyBinding Key="D6" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Forums"/>
        <KeyBinding Key="U" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="UnratedGuests"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="Suggestions"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding NavigateCommand}" CommandParameter="RegisterAccommodation"/>
        <KeyBinding Key="Q" Modifiers="Ctrl" Command="{Binding StopDemoCommand}"/>
        <KeyBinding Key="F5" Command="{Binding StartDemoCommand}"/>
    </Window.InputBindings>



    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563eb"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b82f6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:UnratedGuestsViewModel}">
            <view:UnratedGuestsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RegisterAccommodationViewModel}">
            <view:RegisterAccommodationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ReviewsViewModel}">
            <view:ReviewsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RequestsViewModel}">
            <view:RequestsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AccommodationsViewModel}">
            <view:AccommodationsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:StatisticViewModel}">
            <view:StatisticView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ForumViewModel}">
            <view:ForumView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ForumCommentsViewModel}">
            <view:ForumCommentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:SystemSuggestionsViewModel}">
            <view:SystemSuggestionsView/>
        </DataTemplate>
        
        
    </Window.Resources>
    <Grid>
        <Border VerticalAlignment="Top" Panel.ZIndex="1" Height="132" CornerRadius="0,0,40,40">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.2">
                    <GradientStop Color="#1e40af" Offset="0"/>
                    <GradientStop Color="#3b82f6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="32,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Owner Dashboard" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Menu Background="Transparent" HorizontalAlignment="Right">
                            <MenuItem x:Name="UserMenuItem" Header="👤" TabIndex="8">
                                <MenuItem.Template>
                                    <ControlTemplate TargetType="MenuItem">
                                        <Border Background="White" CornerRadius="20" Width="40" Height="40" x:Name="border" Opacity="0.15">
                                            <Grid>
                                                <ContentPresenter x:Name="HeaderHost" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.FontSize="18" TextElement.Foreground="#1e40af"/>
                                                <Popup x:Name="PART_Popup" Placement="Bottom" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" AllowsTransparency="True">
                                                    <Border Background="White" BorderBrush="#C5D5E4" BorderThickness="1" CornerRadius="12" Margin="0 8 0 0">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.15" BlurRadius="16"/>
                                                        </Border.Effect>
                                                        <ItemsPresenter/>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="White"/>
                                                <Setter TargetName="border" Property="Opacity" Value="0.35"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </MenuItem.Template>
                                
                                <!-- Logout -->
                                <MenuItem Header="Logout" Command="{Binding LogoutCommand}" Foreground="#64748b" Background="White" Padding="16 12" FontSize="13" FontWeight="Medium" TabIndex="9">
                                    <MenuItem.Template>
                                        <ControlTemplate TargetType="MenuItem">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="8" x:Name="BorderElement">
                                                <ContentPresenter ContentSource="Header"/>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#f1f5f9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="BorderElement" Property="Background" Value="#f1f5f9"/>
                                                    <Setter Property="Foreground" Value="#1e40af"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="BorderElement" Property="Background" Value="#e0f2fe"/>
                                                    <Setter Property="Foreground" Value="#0369a1"/>
                                                    <Setter TargetName="BorderElement" Property="BorderBrush" Value="#0ea5e9"/>
                                                    <Setter TargetName="BorderElement" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </MenuItem.Template>
                                </MenuItem>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </Grid>
                <!-- Navigation Buttons -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Home" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Home" TabIndex="1"/>
                    <Button Grid.Column="1" Content="Accommodations" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Accommodations" TabIndex="2"/>
                    <Button Grid.Column="2" Content="Requests" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Requests" TabIndex="3"/>
                    <Button Grid.Column="3" Content="Analytics" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Statistics" TabIndex="4"/>
                    <Button Grid.Column="4" Content="Reviews" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Reviews" TabIndex="5"/>
                    <Button Grid.Column="5" Content="Forums" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Forums" TabIndex="6"/>
                    <Button Grid.Column="6" Content="Demo" Style="{StaticResource NavButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Demo" TabIndex="7"/>
                    
                </Grid>
            </Grid>
        </Border>
        <!-- Main Content -->
        <Border Margin="0,100,0,0" Background="#fafbfc">
            <ContentControl x:Name="MainContentControl" Content="{Binding CurrentViewModel}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
        <!-- Notification Popup -->
        <Popup IsOpen="{Binding IsNotificationPopupVisible}" Placement="Center" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="16" Padding="24 20">
                <Border.Effect>
                    <DropShadowEffect Color="#000" Direction="270" ShadowDepth="6" Opacity="0.08" BlurRadius="20"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding NotificationTitle}" 
                       Foreground="#1e293b" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding NotificationMessage}" 
                       Foreground="#64748b" 
                       FontSize="13" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       MaxWidth="300"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>