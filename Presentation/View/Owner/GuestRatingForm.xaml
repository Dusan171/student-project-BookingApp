<Window x:Class="BookingApp.Presentation.View.Owner.GuestRatingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest Rating Form"
        Height="430"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <TextBlock Text="🧾 Rate guest"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#2D3E50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

      
        <StackPanel Grid.Row="1" VerticalAlignment="Top" >

            <StackPanel>
                <TextBlock Text="Cleanliness (1-5):" FontSize="14" Foreground="#555" Margin="5,0"/>
                <Border CornerRadius="8" BorderBrush="#C5D5E4" BorderThickness="1" Background="#F8FAFC">
                    <TextBox x:Name="CleanlinessBox"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>
            </StackPanel>

            <!-- Poštovanje pravila -->
            <StackPanel>
                <TextBlock Text="Rule respecting (1-5):" FontSize="14" Foreground="#555" Margin="5,0"/>
                <Border CornerRadius="8" BorderBrush="#C5D5E4" BorderThickness="1" Background="#F8FAFC">
                    <TextBox x:Name="RuleRespectBox"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>
            </StackPanel>

           
            <StackPanel>
                <TextBlock Text="Comment:" FontSize="14" Foreground="#555" Margin="5,0"/>
                <Border CornerRadius="8" BorderBrush="#C5D5E4" BorderThickness="1" Background="#F8FAFC">
                    <TextBox x:Name="CommentBox"
                             Height="80"
                             FontSize="14"
                             Padding="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>
            </StackPanel>
        </StackPanel>

       
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    >

            <Button Content="Cancel"
                    Width="100"
                    Height="35"
                    Background="#E5ECF4"
                    Foreground="#2D3E50"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Click="Close_Click"
                    >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Submit"
                    Width="100"
                    Height="35"
                    Background="#BFD9F2"
                    Foreground="#2D3E50"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="Submit_Click"
                    Margin="10,0,0,0"
                    >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
