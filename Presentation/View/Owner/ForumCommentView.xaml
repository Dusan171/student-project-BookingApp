<UserControl x:Class="BookingApp.Presentation.View.Owner.ForumCommentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200">

    <UserControl.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding BackToForumsCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommentsCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding PostCommentCommand}"/>
    </UserControl.InputBindings>

    <Grid Background="#fafbfc">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel>

                <!-- Header -->
                <Grid Margin="0,20,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="← Back"
                            Command="{Binding BackToForumsCommand}"
                            Background="Transparent"
                            Foreground="#475569"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="12,8"
                            BorderThickness="1"
                            BorderBrush="#e2e8f0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            TabIndex="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}"
                                        x:Name="border">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#f8fafc"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#cbd5e1"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="{Binding SelectedForum.Title}"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#1e293b"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Grid>

                <!-- Forum Info Card -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24" 
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Forum Details" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1e293b"/>

                            <!-- Very Useful Badge -->
                            <Border Background="#10b981" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    Margin="12,0,0,0"
                                    Visibility="{Binding SelectedForum.IsVeryUseful, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="VERY USEFUL FORUM" 
                                           FontSize="10" 
                                           FontWeight="Bold" 
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" >
                            <TextBlock Text="📍" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding SelectedForum.LocationName}" FontSize="14" Foreground="#64748b" FontWeight="Medium"/>
                            <TextBlock Text=" • Created by " FontSize="14" Foreground="#64748b" Margin="8,0,0,0"/>
                            <TextBlock Text="{Binding SelectedForum.CreatorName}" FontSize="14" FontWeight="Medium" Foreground="#64748b"/>
                            <TextBlock Text=" on " FontSize="14" Foreground="#64748b" Margin="4,0"/>
                            <TextBlock Text="{Binding SelectedForum.CreatedDate, StringFormat='dd.MM.yyyy'}" FontSize="14" FontWeight="Medium" Foreground="#64748b"/>
                        </StackPanel>

                        <TextBlock Text="{Binding ForumDescription}" 
                                   FontSize="14" 
                                   Foreground="#475569"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal">
                            <Border Background="#dbeafe" CornerRadius="4" Padding="8,3" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SelectedForum.OwnerCommentsCount}" FontSize="13" FontWeight="Bold" Foreground="#1e40af"/>
                                    <TextBlock Text=" owner comments" FontSize="11" Foreground="#1e40af" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#fef3c7" CornerRadius="4" Padding="8,3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SelectedForum.GuestCommentsCount}" FontSize="13" FontWeight="Bold" Foreground="#d97706"/>
                                    <TextBlock Text=" guest comments" FontSize="11" Foreground="#d97706" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Add Comment Section -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24" 
                        Margin="0,0,0,24"
                        Visibility="{Binding CanAddComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Add Your Comment" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1e293b"
                                   Margin="0,0,0,16"/>

                        <TextBox Text="{Binding NewCommentText, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="100"
                                 Padding="12"
                                 BorderBrush="#d1d5db"
                                 BorderThickness="1"
                                 Background="White"
                                 FontSize="14"
                                 TabIndex="2">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Top">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Share your experience about this location..." 
                                                                      Foreground="#94a3b8" 
                                                                      FontSize="14"
                                                                      Margin="12,12,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#3b82f6"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding UserStatus}" FontSize="12" Foreground="#64748b"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="Post Comment"
                                    Command="{Binding PostCommentCommand}"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Padding="20,10"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    TabIndex="3">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="6"
                                                Padding="{TemplateBinding Padding}"
                                                x:Name="border">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#1e40af" Offset="0"/>
                                                    <GradientStop Color="#3b82f6" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#1d4ed8" Offset="0"/>
                                                            <GradientStop Color="#60a5fa" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#9ca3af"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Restriction Message -->
                <Border Background="#fef3c7" 
                        BorderBrush="#f59e0b" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,0,24"
                        Visibility="{Binding HasRestrictionMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⚠" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Comment Restrictions" FontSize="16" FontWeight="SemiBold" Foreground="#92400e"/>
                        </StackPanel>
                        <TextBlock Text="{Binding RestrictionMessage}" FontSize="14" Foreground="#92400e" TextWrapping="Wrap" LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Comments Section -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="All Comments"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1e293b"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding SelectedForum.CommentCount}" FontSize="16" FontWeight="Bold" Foreground="#1e40af"/>
                                <TextBlock Text=" total" FontSize="14" Foreground="#64748b" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Comments List -->
                        <ItemsControl ItemsSource="{Binding SelectedForum.Comments}" TabIndex="4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,16" Padding="20">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#f8fafc"/>
                                                <Setter Property="BorderBrush" Value="#e2e8f0"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="CornerRadius" Value="10"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOwnerComment}" Value="True">
                                                        <Setter Property="Background" Value="#dbeafe"/>
                                                        <Setter Property="BorderBrush" Value="#3b82f6"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <!-- Comment Header -->
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="{Binding AuthorName}" FontWeight="SemiBold" FontSize="16" Foreground="#1e293b"/>

                                                        <!-- Owner Badge -->
                                                        <Border Background="#1e40af" VerticalAlignment="Center" CornerRadius="4" Padding="6,2" Margin="8,0,0,0"
                                                                Visibility="{Binding IsOwnerComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="OWNER" FontSize="9" Foreground="White" FontWeight="Bold"/>
                                                        </Border>

                                                        <!-- Guest Badge -->
                                                        <Border Background="#f59e0b" VerticalAlignment="Center" CornerRadius="4" Padding="6,2" Margin="8,0,0,0"
                                                                Visibility="{Binding IsGuestComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="GUEST" FontSize="9" Foreground="White" FontWeight="Bold"/>
                                                        </Border>

                                                        <!-- Verified Stay Badge - ONLY for guests -->
                                                        <Border Background="#10b981" VerticalAlignment="Center" CornerRadius="4" Padding="4,2" Margin="6,0,0,0">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding IsGuestComment}" Value="True"/>
                                                                                <Condition Binding="{Binding HasVerifiedStay}" Value="True"/>
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="✓" FontSize="9" Foreground="White" Margin="0,0,2,0"/>
                                                                <TextBlock Text="VERIFIED" FontSize="8" Foreground="White" FontWeight="Bold"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding CreatedDate, StringFormat='dd.MM.yyyy at HH:mm'}" FontSize="12" Foreground="#1e293b"/>
                                                </StackPanel>

                                                <!-- Report Button -->
                                                <Button Grid.Column="1"
                                                       Content="Report"
                                                       Background="Transparent"
                                                       Foreground="#ef4444"
                                                       BorderBrush="#ef4444"
                                                       BorderThickness="1"
                                                       FontSize="12"
                                                       Padding="10,6"
                                                       Command="{Binding DataContext.ReportCommentCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                       CommandParameter="{Binding}"
                                                       Visibility="{Binding CanReport, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       VerticalAlignment="Top">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}"
                                                                    x:Name="border">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#fef2f2"/>
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>

                                            <!-- Comment Text -->
                                            <TextBlock Text="{Binding CommentText}" FontSize="14" Foreground="#374151" TextWrapping="Wrap" LineHeight="20" Margin="0,0,0,8"/>

                                            <!-- Report Status -->
                                            <Border Background="#fef2f2" BorderBrush="#fecaca" BorderThickness="1" CornerRadius="6" Padding="8" Margin="0,0,0,8"
                                                   HorizontalAlignment="Left" Visibility="{Binding HasReports, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⚠" FontSize="12" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding ReportsCount}" FontWeight="Bold" FontSize="12" Foreground="#dc2626"/>
                                                    <TextBlock Text=" reports - This comment may be unreliable" FontSize="12" Foreground="#dc2626" Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Stay Info -->
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#ecfdf5" CornerRadius="4" Padding="6,3"
                                                        Visibility="{Binding HasVerifiedStay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✓" FontSize="11" Foreground="#059669" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Stayed: " FontSize="11" Foreground="#059669"/>
                                                        <TextBlock Text="{Binding StayDatesText}" FontSize="11" FontWeight="Medium" Foreground="#059669"/>
                                                    </StackPanel>
                                                </Border>

                                                <Border Background="#fef3c7" CornerRadius="4" Padding="6,3"
                                                        Visibility="{Binding HasUnverifiedStay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="?" FontSize="11" Foreground="#d97706" Margin="0,0,4,0"/>
                                                        <TextBlock Text="No verified stay at this location" FontSize="11" Foreground="#d97706"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#f8fafc" 
                                BorderBrush="#e2e8f0" 
                                BorderThickness="1" 
                                CornerRadius="10" 
                                Padding="40" 
                                Visibility="{Binding HasNoComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="💬" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                <TextBlock Text="No comments yet" FontSize="18" FontWeight="SemiBold" Foreground="#475569" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <TextBlock Text="Be the first to share your experience!" FontSize="14" Foreground="#64748b" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>