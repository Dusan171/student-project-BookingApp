<UserControl x:Class="BookingApp.Presentation.View.Owner.SystemSuggestionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200">

    <UserControl.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding BackToHomeCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshSuggestionsCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding AddAccommodationCommand}"/>
    </UserControl.InputBindings>

    <Grid Background="#fafbfc">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel>

                <!-- Header -->
                <Grid Margin="0,20,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="← Back"
                            Command="{Binding BackToHomeCommand}"
                            Background="Transparent"
                            Foreground="#475569"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="12,8"
                            BorderThickness="1"
                            BorderBrush="#e2e8f0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            TabIndex="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}"
                                        x:Name="border">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#f8fafc"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#cbd5e1"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="System Suggestions"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#1e293b"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Analysis Period Info -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Analysis based on reservation statistics from the last 30 days" 
                                   FontSize="14" 
                                   Foreground="#1e293b"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- High Demand Locations -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24" 
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#10b981" CornerRadius="8" Padding="8,4" Margin="0,0,12,0">
                                <TextBlock Text="📈 HIGH DEMAND" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Consider opening new accommodations in these locations" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1e293b"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding HighDemandLocations}" TabIndex="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#ecfdf5" 
                    BorderBrush="#10b981" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,12,12">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Location Info -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="📍" FontSize="14" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding City}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1e293b"/>
                                                    <TextBlock Text=", " FontSize="16" Foreground="#64748b"/>
                                                    <TextBlock Text="{Binding Country}" 
                                       FontSize="16" 
                                       Foreground="#64748b"/>
                                                </StackPanel>

                                                <!-- Statistics -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <Border Background="#10b981" CornerRadius="3" Padding="4,2" Margin="0,0,6,0">
                                                        <TextBlock FontSize="10" Foreground="White" FontWeight="Bold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} reservations">
                                                                    <Binding Path="ReservationCount" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="#059669" CornerRadius="3" Padding="4,2">
                                                        <TextBlock FontSize="10" Foreground="White" FontWeight="Bold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:F0}% occupied">
                                                                    <Binding Path="OccupancyRate" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>

                                                <TextBlock Text="{Binding Recommendation}" 
                                   FontSize="12" 
                                   Foreground="#059669"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- Action Button -->
                                            <Button Grid.Column="1"
        Content="Add Accommodation"
        Background="#10b981"
        Foreground="White"
        FontSize="12"
        FontWeight="SemiBold"
        Padding="12,6"
        BorderThickness="0"
        Cursor="Hand"
        VerticalAlignment="Center"
        Command="{Binding DataContext.AddAccommodationCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
        CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="6" 
                        Padding="{TemplateBinding Padding}"
                        x:Name="border">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter TargetName="border" Property="BorderBrush" Value="#10b981"/>
                                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State for High Demand -->
                        <Border Background="#ecfdf5" 
                                BorderBrush="#a7f3d0" 
                                BorderThickness="1" 
                                CornerRadius="10" 
                                Padding="30" 
                                Visibility="{Binding HasNoHighDemand, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="No high-demand locations identified" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#059669" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Low Demand Locations -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#ef4444" CornerRadius="8" Padding="8,4" Margin="0,0,12,0">
                                <TextBlock Text="📉 LOW DEMAND" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Consider closing or relocating these accommodations" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1e293b"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Low Demand Cards -->
                        <ItemsControl ItemsSource="{Binding LowDemandAccommodations}" TabIndex="3">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#fef2f2" 
                                            BorderBrush="#ef4444" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="20" 
                                            Margin="0,0,0,12">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Accommodation Info -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="🏠" FontSize="14" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding AccommodationName}" 
                                                               FontSize="16" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="#1e293b"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="📍" FontSize="12" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding City}" 
                                                               FontSize="14" 
                                                               Foreground="#64748b"/>
                                                    <TextBlock Text=", " FontSize="14" Foreground="#64748b"/>
                                                    <TextBlock Text="{Binding Country}" 
                                                               FontSize="14" 
                                                               Foreground="#64748b"/>
                                                </StackPanel>

                                                <!-- Statistics -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <Border Background="#ef4444" CornerRadius="3" Padding="4,2" Margin="0,0,6,0">
                                                        <TextBlock FontSize="10" Foreground="White" FontWeight="Bold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} reservations">
                                                                    <Binding Path="ReservationCount" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="#dc2626" CornerRadius="3" Padding="4,2">
                                                        <TextBlock FontSize="10" Foreground="White" FontWeight="Bold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:F0}% occupied">
                                                                    <Binding Path="OccupancyRate" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>

                                                <TextBlock Text="{Binding Recommendation}" 
                                                           FontSize="12" 
                                                           Foreground="#dc2626"
                                                           FontWeight="Medium"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                
                                                <Button Content="Close Accommodation"
                                                        Background="#ef4444"
                                                        Foreground="White"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Padding="10,6"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.CloseAccommodationCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="6" 
                                                                    Padding="{TemplateBinding Padding}"
                                                                    x:Name="border">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#dc2626"/>
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="#ef4444"/>
                                                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State for Low Demand -->
                        <Border Background="#fef2f2" 
                                BorderBrush="#fecaca" 
                                BorderThickness="1" 
                                CornerRadius="10" 
                                Padding="30" 
                                Visibility="{Binding HasNoLowDemand, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🎯" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="All accommodations performing well" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#dc2626" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>