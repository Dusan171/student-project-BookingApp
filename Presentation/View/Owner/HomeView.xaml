<UserControl x:Class="BookingApp.Presentation.View.Owner.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.Presentation.View.Owner"
             mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="1200">

    <Grid Margin="0" Background="#fafbfc">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>

                <Border Height="80" Margin="0,20,0,20" CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1e40af" Offset="0"/>
                            <GradientStop Color="#3b82f6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Statistics.WelcomeMessage}"  
               FontSize="28"  
               FontWeight="SemiBold"  
               Foreground="White"
               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>


                <Grid Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"  
                        Background="White"  
                        CornerRadius="10"  
                        Padding="16"
                        Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <Grid Width="40" Height="40" Margin="0,0,0,10">
                                <Ellipse Fill="#dbeafe"/>
                                <TextBlock Text="🏠" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="{Binding Statistics.ActiveProperties}"  
                                   FontSize="22"  
                                   FontWeight="SemiBold"  
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,3"/>
                            <TextBlock Text="Properties"  
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"  
                        Background="White"  
                        CornerRadius="10"  
                        Padding="16"
                        Margin="8,0,8,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <Grid Width="40" Height="40" Margin="0,0,0,10">
                                <Ellipse Fill="#dbeafe"/>
                                <TextBlock Text="⭐" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="{Binding Statistics.AverageGrade, StringFormat='{}{0:F2}'}"  
                                   FontSize="22"  
                                   FontWeight="SemiBold"  
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,3"/>
                            <TextBlock Text="Average Rating"  
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2"  
                        Background="White"  
                        CornerRadius="10"  
                        Padding="16"
                        Margin="16,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <Grid Width="40" Height="40" Margin="0,0,0,10">
                                <Ellipse Fill="#dbeafe"/>
                                <TextBlock Text="💬" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="{Binding Statistics.TotalReviews}"  
                                   FontSize="22"  
                                   FontWeight="SemiBold"  
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,3"/>
                            <TextBlock Text="Reviews"  
                                   FontSize="14"  
                                   FontWeight="Bold"
                                   Foreground="#475569"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Margin="30,0,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">

                        <Border Background="White"  
                            BorderBrush="#e2e8f0"  
                            BorderThickness="1"
                            CornerRadius="12"  
                            Padding="24"
                            Margin="0,0,0,16">
                            <Border.Effect>
                                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,14">
                                    <TextBlock Text="💡" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="System Suggestions"  
                                           FontSize="20"  
                                           FontWeight="SemiBold"  
                                           Foreground="#475569"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="AI-powered insights to optimize your property performance"  
                                       FontSize="14"  
                                       Foreground="#64748b"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,14"/>

                                <Button Content="View Suggestions"  
                                    Command="{Binding ViewSuggestionsCommand}"
                                    Foreground="White"
                                    FontSize="16"
                                    Width="150"
                                    Height="29"
                                    FontWeight="SemiBold"
                                    
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left">

                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="6" x:Name="border">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#1e40af" Offset="0"/>
                                                        <GradientStop Color="#3b82f6" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#1d4ed8" Offset="0"/>
                                                                <GradientStop Color="#60a5fa" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#1e293b" Offset="0"/>
                                                                <GradientStop Color="#334155" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>

                        <Border Background="White"  
                            BorderBrush="#e2e8f0"  
                            BorderThickness="1"
                            CornerRadius="12"  
                            Padding="24">
                            <Border.Effect>
                                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,14">
                                    <TextBlock Text="🔔" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Unrated Guests"  
                                           FontSize="18"  
                                           FontWeight="SemiBold"  
                                           Foreground="#475569"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                </StackPanel>

                                <TextBlock Text="Rate guests within 5 days after their stay ends"  
                                       FontSize="14"  
                                       Foreground="#64748b"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,14"/>

                                <Button Content="Rate Guests"  
                                    Command="{Binding ShowUnratedGuestsCommand}"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Width="150"
                                    Height="29"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left">

                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="6" x:Name="border">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#1e40af" Offset="0"/>
                                                        <GradientStop Color="#3b82f6" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#1d4ed8" Offset="0"/>
                                                                <GradientStop Color="#60a5fa" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#1e293b" Offset="0"/>
                                                                <GradientStop Color="#334155" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Border Grid.Column="1"  
                        Background="White"  
                        BorderBrush="#e2e8f0"  
                        BorderThickness="1"
                        CornerRadius="12"  
                        Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,14">
                                <TextBlock Text="⌨" FontSize="20" VerticalAlignment="Top" Margin="0,0,10,8" Height="29"/>
                                <TextBlock Text="Navigation"  
                                       FontSize="20"  
                                       Margin="0,0,0,4"
                                       FontWeight="SemiBold"  
                                       Foreground="#475569"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Tab navigation between sections"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Enter or Space to activate buttons"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="CTRL + Number {1,2,3,4,5,6} for menu navigation"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="F5 for Demo Start"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="CTRL + Q for Demo Stop"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="CTRL + U for Unrated Guests"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="CTRL + S for Owner Dashboard"  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                    <Ellipse Width="6" Height="6" Fill="#3b82f6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="CRTL + A for Register New Accommodation "  
                   FontSize="13"  
                   Foreground="#64748b"/>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>