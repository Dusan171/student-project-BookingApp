<UserControl x:Class="BookingApp.Presentation.View.Owner.AccommodationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utilities="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200">

    <UserControl.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utilities:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding BackToHomeCommand}"/>
    </UserControl.InputBindings>

    <Grid Background="#fafbfc">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel>

                <!-- Header -->
                <Grid Margin="0,20,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    
                    <TextBlock Grid.Column="1"
                               Text="My Accommodations"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#1e293b"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Toolbar -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#e2e8f0" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="12,8"
                            Margin="0,0,16,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🔍" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TabIndex="2">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Search by name or location..." 
                                                                          Foreground="#94a3b8" 
                                                                          FontSize="14"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Add New Button -->
                    <Button Grid.Column="1"
            Content="+ Add New Accommodation"
            Command="{Binding AddNewCommand}"
            Foreground="White"
            FontSize="14"
            FontWeight="SemiBold"
            Padding="20,10"
            BorderThickness="0"
            Cursor="Hand"
            TabIndex="3">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6" Padding="{TemplateBinding Padding}" x:Name="border">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1e40af" Offset="0"/>
                                            <GradientStop Color="#3b82f6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#1d4ed8" Offset="0"/>
                                                    <GradientStop Color="#60a5fa" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#1e293b" Offset="0"/>
                                                    <GradientStop Color="#334155" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>


                <!-- Main Container -->
                <Border Background="White" 
                        BorderBrush="#e2e8f0" 
                        BorderThickness="1" 
                        CornerRadius="16" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.06" BlurRadius="12"/>
                    </Border.Effect>

                    <StackPanel>
                        

                        <!-- Accommodation Cards -->
                        <ItemsControl ItemsSource="{Binding Accommodations}" TabIndex="4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8fafc" 
                                            BorderBrush="#e2e8f0" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="16" 
                                            Margin="0,0,0,12">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Image with Click -->
                                            <Border Grid.Column="0" 
                                                    Background="#e2e8f0" 
                                                    CornerRadius="6" 
                                                    Width="100" 
                                                    Height="80"
                                                    Margin="0,0,16,0"
                                                    Cursor="Hand"
                                                    Tag="{Binding}"
                                                    MouseLeftButtonDown="ImageBorder_Click">
                                                <Grid>
                                                    <!-- Placeholder -->
                                                    <TextBlock Text="📷" 
                                                              FontSize="32" 
                                                              HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"
                                                              Foreground="#94a3b8"
                                                              IsHitTestVisible="False"/>

                                                    <!-- Actual First Image -->
                                                    <Image Stretch="UniformToFill" IsHitTestVisible="False">
                                                        <Image.Source>
                                                            <Binding Path="ImagePaths[0].Path" Converter="{StaticResource ImagePathConverter}"/>
                                                        </Image.Source>
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ImagePaths.Count}" Value="0">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>

                                                    <!-- Image Count Badge -->
                                                    <Border Background="#1e40af" 
                                                            CornerRadius="4" 
                                                            Padding="6,3"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            Margin="0,0,6,6"
                                                            IsHitTestVisible="False">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ImagePaths.Count}" Value="0">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Foreground="White" FontSize="10" FontWeight="Bold">
                                                            <Run Text="{Binding ImagePaths.Count, Mode=OneWay}"/>
                                                            <Run Text=" 📷"/>
                                                        </TextBlock>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Property Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="18" 
                                                          FontWeight="Bold" 
                                                          Foreground="#1e293b"
                                                          Margin="0,0,0,4"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <TextBlock Text="📍" FontSize="12" Margin="0,0,4,0"/>
                                                    <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#64748b">
                                                        <Run Text="{Binding GeoLocation.City}"/>
                                                        <Run Text=", "/>
                                                        <Run Text="{Binding GeoLocation.Country}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🏠" FontSize="12" Margin="0,0,4,0"/>
                                                    <TextBlock FontSize="13"  FontWeight="SemiBold" Foreground="#64748b">
                                                        <Run Text="{Binding Type}"/>
                                                        <Run Text=" • Max "/>
                                                        <Run Text="{Binding MaxGuests}"/>
                                                        <Run Text=" guests • Min "/>
                                                        <Run Text="{Binding MinReservationDays}"/>
                                                        <Run Text=" days"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="2"
                                                    Content="Delete"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#DC3545"
                                                    Foreground="White"
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Padding="16,8"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    VerticalAlignment="Center">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}"
                                                                x:Name="border">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#b91c1c"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter TargetName="border" Property="BorderBrush" Value="#ef4444"/>
                                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#f8fafc" 
                                BorderBrush="#e2e8f0" 
                                BorderThickness="1" 
                                CornerRadius="10" 
                                Padding="40" 
                                Visibility="{Binding HasNoAccommodations, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🏠" 
                                          FontSize="32" 
                                          HorizontalAlignment="Center" 
                                          Margin="0,0,0,12"/>
                                <TextBlock Text="No properties yet" 
                                          FontSize="18" 
                                          FontWeight="SemiBold" 
                                          Foreground="#475569" 
                                          HorizontalAlignment="Center" 
                                          Margin="0,0,0,6"/>
                                <TextBlock Text="Add your first property to get started." 
                                          FontSize="14" 
                                          Foreground="#64748b" 
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Image Gallery Overlay - samo zatamnjena pozadina -->
        <Border x:Name="GalleryOverlay" 
                Background="#DD000000" 
                Visibility="Collapsed"
                MouseLeftButtonDown="CloseGallery"
                Focusable="True"
                FocusVisualStyle="{x:Null}">

            <Border.InputBindings>
                <KeyBinding Key="Escape" Command="{Binding CloseGalleryCommand}"/>
                <KeyBinding Key="Left" Command="{Binding PreviousImageCommand}"/>
                <KeyBinding Key="Right" Command="{Binding NextImageCommand}"/>
            </Border.InputBindings>

            <Grid MouseLeftButtonDown="PreventClose">
                <!-- Close Button - X u gornjem desnom uglu -->
                <Button Content="✕" 
                        Click="CloseGalleryButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="32"
                        FontWeight="Bold"
                        Width="48"
                        Height="48"
                        Margin="20"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="24"
                                    x:Name="border">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Previous Arrow -->
                <Button Content="◀" 
                        Click="PreviousImage_Click"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#33FFFFFF"
                        Foreground="White"
                        FontSize="32"
                        Width="56"
                        Height="56"
                        Margin="40,0,0,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="28"
                                    x:Name="border">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#55FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Main Image - samo slika u centru -->
                <Image x:Name="MainGalleryImage" 
                       Stretch="Uniform"
                       Margin="120,80,120,80"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Next Arrow -->
                <Button Content="▶" 
                        Click="NextImage_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="#33FFFFFF"
                        Foreground="White"
                        FontSize="32"
                        Width="56"
                        Height="56"
                        Margin="0,0,40,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="28"
                                    x:Name="border">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#55FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Image Counter - donji desni ugao -->
                <Border Background="#33000000" 
                        CornerRadius="6" 
                        Padding="12,6"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,40,40"
                        Panel.ZIndex="10">
                    <TextBlock x:Name="ImageCounter"
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Text="1 / 1"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>