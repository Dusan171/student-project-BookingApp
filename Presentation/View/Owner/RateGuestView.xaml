<Window x:Class="BookingApp.Presentation.View.Owner.RateGuestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rate Guest" Height="620" Width="500" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#fafbfc">

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⭐" FontSize="22" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Rate Guest"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#1e293b"/>
            </StackPanel>
        </StackPanel>

        <!-- Reservation Details -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                BorderBrush="#e2e8f0" 
                BorderThickness="1" 
                Padding="16" 
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Reservation Details" 
                           FontSize="15" 
                           FontWeight="SemiBold" 
                           Foreground="#374151" 
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Guest:" FontSize="13" Foreground="#6b7280" Margin="0,0,0,6"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RatingDetails.GuestName}" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Property:" FontSize="13" Foreground="#6b7280" Margin="0,0,0,6"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RatingDetails.AccommodationName}" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Stay:" FontSize="13" Foreground="#6b7280"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" FontSize="13" FontWeight="Medium" Foreground="#374151">
                        <Run Text="{Binding RatingDetails.StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                        <Run Text=" - "/>
                        <Run Text="{Binding RatingDetails.EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Rating Form -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                BorderBrush="#e2e8f0" 
                BorderThickness="1" 
                Padding="16"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="2" Opacity="0.04" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel>

                <!-- Cleanliness -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Cleanliness (1-5)" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#374151" 
                               Margin="0,0,0,6"/>
                    <ComboBox SelectedValue="{Binding RatingDetails.Review.CleanlinessRating}" 
                              SelectedValuePath="Tag"
                              FontSize="13"
                              Height="35"
                              Background="White"
                              BorderBrush="#e2e8f0"
                              BorderThickness="1"
                              TabIndex="1">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border x:Name="templateRoot" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="25"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter x:Name="contentPresenter"
                                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Margin="10,0,0,0"/>
                                                    <ToggleButton x:Name="toggleButton"
                                                                Grid.ColumnSpan="2"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                Focusable="False"/>
                                                    <Path x:Name="arrow" Grid.Column="1" 
                                                        Data="M 0 0 L 3 3 L 6 0 Z" 
                                                        Fill="#64748b" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                    <Popup x:Name="PART_Popup" 
                                                         Placement="Bottom" 
                                                         IsOpen="{TemplateBinding IsDropDownOpen}"
                                                         AllowsTransparency="True"
                                                         Focusable="False"
                                                         PopupAnimation="Slide">
                                                        <Border Background="White" 
                                                              BorderBrush="#e2e8f0" 
                                                              BorderThickness="1" 
                                                              CornerRadius="6"
                                                              MinWidth="{Binding ActualWidth, ElementName=templateRoot}">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="8"/>
                                                            </Border.Effect>
                                                            <ScrollViewer x:Name="DropDownScrollViewer">
                                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#cbd5e1"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#3b82f6"/>
                                                    <Setter TargetName="templateRoot" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#3b82f6"/>
                                                    <Setter TargetName="templateRoot" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="1 - Poor" Tag="1"/>
                        <ComboBoxItem Content="2 - Fair" Tag="2"/>
                        <ComboBoxItem Content="3 - Good" Tag="3"/>
                        <ComboBoxItem Content="4 - Very Good" Tag="4"/>
                        <ComboBoxItem Content="5 - Excellent" Tag="5"/>
                    </ComboBox>
                </StackPanel>

                <!-- Rule Respecting -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Rule Respecting (1-5)" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#374151" 
                               Margin="0,0,0,6"/>
                    <ComboBox SelectedValue="{Binding RatingDetails.Review.RuleRespectingRating}" 
                              SelectedValuePath="Tag"
                              FontSize="13"
                              Height="35"
                              Background="White"
                              BorderBrush="#e2e8f0"
                              BorderThickness="1"
                              TabIndex="2">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Border x:Name="templateRoot" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="25"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter x:Name="contentPresenter"
                                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Margin="10,0,0,0"/>
                                                    <ToggleButton x:Name="toggleButton"
                                                                Grid.ColumnSpan="2"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                Focusable="False"/>
                                                    <Path x:Name="arrow" Grid.Column="1" 
                                                        Data="M 0 0 L 3 3 L 6 0 Z" 
                                                        Fill="#64748b" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                    <Popup x:Name="PART_Popup" 
                                                         Placement="Bottom" 
                                                         IsOpen="{TemplateBinding IsDropDownOpen}"
                                                         AllowsTransparency="True"
                                                         Focusable="False"
                                                         PopupAnimation="Slide">
                                                        <Border Background="White" 
                                                              BorderBrush="#e2e8f0" 
                                                              BorderThickness="1" 
                                                              CornerRadius="6"
                                                              MinWidth="{Binding ActualWidth, ElementName=templateRoot}">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="8"/>
                                                            </Border.Effect>
                                                            <ScrollViewer x:Name="DropDownScrollViewer">
                                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#cbd5e1"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#3b82f6"/>
                                                    <Setter TargetName="templateRoot" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="#3b82f6"/>
                                                    <Setter TargetName="templateRoot" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="1 - Poor" Tag="1"/>
                        <ComboBoxItem Content="2 - Fair" Tag="2"/>
                        <ComboBoxItem Content="3 - Good" Tag="3"/>
                        <ComboBoxItem Content="4 - Very Good" Tag="4"/>
                        <ComboBoxItem Content="5 - Excellent" Tag="5"/>
                    </ComboBox>
                </StackPanel>

                <!-- Comment -->
                <StackPanel>
                    <TextBlock Text="Additional Comments" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#374151" 
                               Margin="0,0,0,6"/>
                    <Border CornerRadius="6" 
                            BorderBrush="#e2e8f0" 
                            BorderThickness="1" 
                            Background="White">
                        <TextBox Text="{Binding RatingDetails.Review.Comment, UpdateSourceTrigger=PropertyChanged}"
                                 Height="60"
                                 FontSize="13"
                                 Padding="10"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Auto"
                                 TabIndex="3"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Cancel"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#f1f5f9"
                    Foreground="#64748b"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Margin="0,0,12,0"
                    TabIndex="4"/>

            <Button Content="Submit"
        Style="{StaticResource ModernButtonStyle}"
        Foreground="White"
        Command="{Binding SubmitReviewCommand}"
        Width="100"
        TabIndex="5">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1e40af" Offset="0"/>
                        <GradientStop Color="#3b82f6" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>