<UserControl x:Class="BookingApp.Presentation.View.Owner.Notifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BookingApp.Presentation.View.Owner"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#f2f4f8">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#f2f4f8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" BorderBrush="LightGray" Background="White" CornerRadius="5" Padding="10" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding GuestId, StringFormat='❗ Guest ID: {0}'}" FontWeight="Bold" Margin="0,0,0,5" />
                                    <TextBlock Text="{Binding Deadline, StringFormat='Rating deadline: {0:d}'}" Margin="0,0,0,10" />
                                    <Button Content="Rate now" Width="100" HorizontalAlignment="Left" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.RateGuestCommand}" CommandParameter="{Binding}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>