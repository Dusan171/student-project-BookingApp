<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Tourist"
             xmlns:util="clr-namespace:BookingApp.Utilities">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <util:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="14" Height="14" Margin="0,0,8,0">
                                    <Path Data="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" 
                                          Fill="White"/>
                                </Viewbox>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6C7B7D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReserveTourButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{Binding ReserveButtonColor}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="KeyPointItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
       
        <Grid x:Name="ImageOverlay" 
              Background="#CC000000" 
              Visibility="Collapsed"
              Panel.ZIndex="1000"
              MouseLeftButtonDown="ImageOverlay_MouseLeftButtonDown">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

               
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock x:Name="OverlayImageTitle" 
                               Text="Slika ture" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>

                    <Button x:Name="OverlayCloseButton" 
                            Content="✕" 
                            FontSize="24" 
                            FontWeight="Bold"
                            Foreground="White" 
                            Background="Transparent" 
                            BorderThickness="0"
                            HorizontalAlignment="Right" 
                            Padding="15"
                            Cursor="Hand"
                            Click="CloseOverlay_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent" 
                                                    CornerRadius="20" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#33FFFFFF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

               
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="8" 
                        MaxWidth="1000" 
                        MaxHeight="600"
                        Margin="50">
                    <Image x:Name="OverlayMainImage" 
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                </Border>

                
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">

                    <Button x:Name="OverlayPreviousButton" 
                            Content="← Prethodna" 
                            Margin="0,0,20,0"
                            Padding="15,8" 
                            Background="#3498DB" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="PreviousImage_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980B9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="OverlayNextButton" 
                            Content="Sledeća →" 
                            Padding="15,8" 
                            Background="#3498DB" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="NextImage_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980B9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                
                <TextBlock Grid.Row="3" 
                           x:Name="OverlayPositionIndicator"
                           Text="1 / 6" 
                           FontSize="16" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0"/>
            </Grid>

            
            <TextBlock Text="Kliknite bilo gde da zatvorite" 
                       FontSize="14" 
                       Foreground="#CCCCCC" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom" 
                       Margin="0,0,0,20"/>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Button x:Name="BackButton" Style="{StaticResource BackButtonStyle}"
                            Content="NAZAD" Click="BackButton_Click"/>
                </StackPanel>

                
                <Border Grid.Row="1" Background="White" CornerRadius="12" 
                        BorderBrush="#E0E0E0" BorderThickness="1" 
                        Margin="0,0,0,20" Padding="30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            
                            <TextBlock Text="{Binding SelectedTour.Name}" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,15"/>

                            
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Location -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,8">
                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" 
                                              Fill="#E74C3C"/>
                                    </Viewbox>
                                    <TextBlock Text="Lokacija:" FontWeight="SemiBold" Foreground="#34495E"/>
                                </StackPanel>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTour.LocationText}" 
                                           Foreground="#7F8C8D" Margin="0,0,0,8"/>

                                <!-- Duration -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,30,8">
                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" 
                                              Fill="#3498DB"/>
                                    </Viewbox>
                                    <TextBlock Text="Trajanje:" FontWeight="SemiBold" Foreground="#34495E"/>
                                </StackPanel>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedTour.DurationText}" 
                                           Foreground="#7F8C8D" Margin="0,0,0,8"/>

                                <!-- Language -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,8">
                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2 0 .68.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2 0-.68.07-1.35.16-2h4.68c.09.65.16 1.32.16 2 0 .68-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2 0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z" 
                                              Fill="#27AE60"/>
                                    </Viewbox>
                                    <TextBlock Text="Jezik:" FontWeight="SemiBold" Foreground="#34495E"/>
                                </StackPanel>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTour.Language}" 
                                           Foreground="#7F8C8D" Margin="0,0,0,8"/>

                                <!-- Guide -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="0,0,30,8">
                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
                                              Fill="#9B59B6"/>
                                    </Viewbox>
                                    <TextBlock Text="Vodič:" FontWeight="SemiBold" Foreground="#34495E"/>
                                </StackPanel>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SelectedTour.GuideName}" 
                                           Foreground="#7F8C8D" Margin="0,0,0,8"/>

                                <!-- Available Spots -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,0">
                                    <Viewbox Width="18" Height="18" Margin="0,0,8,0">
                                        <Path Data="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A2.98 2.98 0 0 0 17.1 7c-.8 0-1.54.5-1.85 1.26l-1.92 5.63c-.18.5.04 1.05.5 1.28.48.24 1.06.04 1.31-.43L16 12.5V22h4zM12.5 11.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5S11 9.17 11 10s.67 1.5 1.5 1.5zM5.5 6c1.11 0 2-.89 2-2s-.89-2-2-2-2 .89-2 2 .89 2 2 2zm2.5 16v-7H6V9.5A2.5 2.5 0 0 0 3.5 7 2.5 2.5 0 0 0 1 9.5V15h1.5v7h5.5z" 
                                              Fill="#F39C12"/>
                                    </Viewbox>
                                    <TextBlock Text="Dostupnost:" FontWeight="SemiBold" Foreground="#34495E"/>
                                </StackPanel>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTour.AvailableSpotsText}" 
                                           Foreground="{Binding SelectedTour.AvailableSpotsColor}" 
                                           FontWeight="SemiBold"/>
                            </Grid>

                            
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="OPIS TURE" FontSize="16" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding SelectedTour.Description}" 
                                           FontSize="14" Foreground="#7F8C8D" 
                                           TextWrapping="Wrap" LineHeight="22"/>
                            </StackPanel>
                        </StackPanel>

                       
                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="30,0,0,0">
                            <Button Command="{Binding ReserveTourCommand}" 
                                    CommandParameter="{Binding SelectedTour}" 
                                    Style="{StaticResource ReserveTourButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                        <Path Data="M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z" 
                                              Fill="White"/>
                                    </Viewbox>
                                    <TextBlock FontSize="14" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="REZERVIŠI TURU"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedTour.CanReserve}" Value="False">
                                                        <Setter Property="Text" Value="POPUNJENO"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

               
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                   
                    <Border Grid.Column="0" Background="White" CornerRadius="12" 
                            BorderBrush="#E0E0E0" BorderThickness="1" 
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Viewbox Width="20" Height="20" Margin="0,0,10,0">
                                    <Path Data="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" 
                                          Fill="#F39C12"/>
                                </Viewbox>
                                <TextBlock Text="KLJUČNE TAČKE TURE" FontSize="18" FontWeight="Bold" 
                                           Foreground="#2C3E50"/>
                            </StackPanel>

                            <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding KeyPoints}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource KeyPointItemStyle}">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                           FontSize="14" Foreground="#2C3E50"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    
                    <Border Grid.Column="2" Background="White" CornerRadius="12" 
                            BorderBrush="#E0E0E0" BorderThickness="1" 
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Viewbox Width="20" Height="20" Margin="0,0,10,0">
                                    <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" 
                                          Fill="#3498DB"/>
                                </Viewbox>
                                <TextBlock Text="GALERIJA SLIKA" FontSize="18" FontWeight="Bold" 
                                           Foreground="#2C3E50"/>
                            </StackPanel>

                            
                            <Border Background="#F0F0F0" Height="300" CornerRadius="8" 
                                    Margin="0,0,0,15" Cursor="Hand"
                                    MouseLeftButtonUp="MainImage_Click">
                                
                                <Grid>
                                    <Image Stretch="UniformToFill"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                        <Image.Source>
                                            <Binding Path="Images[0].Path" FallbackValue="{x:Null}"/>
                                        </Image.Source>
                                    </Image>
                                    
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Visibility="{Binding Images.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Viewbox Width="60" Height="60" Margin="0,0,0,10">
                                            <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" 
                                                  Fill="#BDC3C7"/>
                                        </Viewbox>
                                        <TextBlock Text="Glavna slika ture" FontSize="16" 
                                                   Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            
                            <TextBlock Text="Dodatne fotografije:" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#34495E" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                               
                                <Border Grid.Column="0" Background="#E8E8E8" Height="80" CornerRadius="4"
                                        Cursor="Hand" MouseLeftButtonUp="Thumbnail1_Click">
                                    <Grid>
                                        <Image Stretch="UniformToFill">
                                            <Image.Source>
                                                <Binding Path="Images[1].Path" FallbackValue="{x:Null}"/>
                                            </Image.Source>
                                        </Image>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Viewbox Width="24" Height="24" Margin="0,0,0,3">
                                                <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" 
                                                      Fill="#95A5A6"/>
                                            </Viewbox>
                                            <TextBlock Text="slika1.jpg" FontSize="8" 
                                                       Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                          
                                <Border Grid.Column="2" Background="#E8E8E8" Height="80" CornerRadius="4"
                                        Cursor="Hand" MouseLeftButtonUp="Thumbnail2_Click">
                                    <Grid>
                                        <Image Stretch="UniformToFill">
                                            <Image.Source>
                                                <Binding Path="Images[2].Path" FallbackValue="{x:Null}"/>
                                            </Image.Source>
                                        </Image>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Viewbox Width="24" Height="24" Margin="0,0,0,3">
                                                <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" 
                                                      Fill="#95A5A6"/>
                                            </Viewbox>
                                            <TextBlock Text="slika2.jpg" FontSize="8" 
                                                       Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Thumbnail 3 with overlay -->
                                <Border Grid.Column="4" Background="#E8E8E8" Height="80" CornerRadius="4"
                                        Cursor="Hand" MouseLeftButtonUp="ShowAllImages_Click">
                                    <Grid>
                                        <Image Stretch="UniformToFill">
                                            <Image.Source>
                                                <Binding Path="Images[3].Path" FallbackValue="{x:Null}"/>
                                            </Image.Source>
                                        </Image>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Viewbox Width="24" Height="24" Margin="0,0,0,3">
                                                <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" 
                                                      Fill="#95A5A6"/>
                                            </Viewbox>
                                            <TextBlock Text="slika3.jpg" FontSize="8" 
                                                       Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <Border Background="#2C3E50" Opacity="0.8" CornerRadius="4">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="+2" FontSize="20" FontWeight="Bold" 
                                                           Foreground="White" HorizontalAlignment="Center"/>
