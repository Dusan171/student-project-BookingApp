<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utils="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="StarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Content" Value="★"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <utils:StarHighlightConverter x:Key="StarHighlightConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="⭐ Ocene i komentari" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Ocenite ture i vodiče" FontSize="16" 
                       Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Lista završenih tura -->
            <ItemsControl ItemsSource="{Binding CompletedReservations}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding TourName}" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GuideName}" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TourDateFormatted}" Grid.Column="2" VerticalAlignment="Center"/>
                                <TextBlock Text="Završeno" Grid.Column="3" VerticalAlignment="Center"/>

                                <Button Content="OCENI" Grid.Column="4" Width="60" 
                                        Background="#007ACC" Foreground="White" FontSize="10"
                                        Command="{Binding DataContext.ReviewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Forma za ocenu -->
            <Border Background="#F8F9FA" Padding="15" CornerRadius="5" Margin="0,20,0,0"
                    Visibility="{Binding IsReviewFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>

                    <TextBlock Text="{Binding SelectedTourName}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <!-- Znanje vodiča -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Znanje vodiča:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding GuideKnowledgeRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Jezik vodiča -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Jezik vodiča:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding GuideLanguageRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Zanimljivost ture -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Zanimljivost ture:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding TourInterestRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Komentar:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ReviewComment, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Odustani" Background="#6C757D" Foreground="White" Padding="15,8" Margin="10,0" 
                                Command="{Binding CancelReviewCommand}"/>
                        <Button Content="Sačuvaj ocenu" Background="#28A745" Foreground="White" Padding="15,8" Margin="10,0" 
                                Command="{Binding SubmitReviewCommand}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>