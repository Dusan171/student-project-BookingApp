<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utils="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Star Button Style - Zaobljen -->
        <Style x:Key="StarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Content" Value="★"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style - Zaobljen -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style - Zaobljen -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#545B62"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#464C54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style - Zaobljen -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Button Style - Zaobljen -->
        <Style x:Key="InfoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#17A2B8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#138496"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F6674"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style - Zaobljen -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BD2130"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rate Button Style - Zaobljen -->
        <Style x:Key="RateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <utils:StarHighlightConverter x:Key="StarHighlightConverter"/>
        <utils:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="⭐ Ocene i komentari" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Ocenite ture i vodiče" FontSize="16" 
                       Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Lista završenih tura -->
            <ItemsControl ItemsSource="{Binding CompletedReservations}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding TourName}" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GuideName}" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TourDateFormatted}" Grid.Column="2" VerticalAlignment="Center"/>
                                <TextBlock Text="Završeno" Grid.Column="3" VerticalAlignment="Center"/>

                                <Button Content="OCENI" Grid.Column="4"
                                        Style="{StaticResource RateButtonStyle}"
                                        Command="{Binding DataContext.ReviewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Forma za ocenu -->
            <Border Background="#F8F9FA" Padding="15" CornerRadius="5" Margin="0,20,0,0"
                    Visibility="{Binding IsReviewFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>

                    <TextBlock Text="{Binding SelectedTourName}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <!-- Znanje vodiča -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Znanje vodiča:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideKnowledgeRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding GuideKnowledgeRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding GuideKnowledgeRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Jezik vodiča -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Jezik vodiča:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetGuideLanguageRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding GuideLanguageRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding GuideLanguageRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Zanimljivost ture -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Zanimljivost ture:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="1"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=1}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="2"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=2}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="3"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=3}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="4"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=4}"/>
                            <Button Style="{StaticResource StarButtonStyle}" 
                                    Command="{Binding SetTourInterestRatingCommand}" CommandParameter="5"
                                    Foreground="{Binding TourInterestRating, Converter={StaticResource StarHighlightConverter}, ConverterParameter=5}"/>
                            <TextBlock Text="{Binding TourInterestRatingText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Komentar:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ReviewComment, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                    <!-- Sekcija za slike -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Slike sa ture (opciono):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="Dodaj sliku" 
                                    Style="{StaticResource InfoButtonStyle}"
                                    Command="{Binding AddImageCommand}"/>
                            <TextBlock Text="{Binding ImageCount}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Lista odabranih slika -->
                        <ItemsControl ItemsSource="{Binding SelectedImages}" Margin="0,5,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Image Preview sa converter-om -->
                                            <Image Grid.Column="0" Width="50" Height="50" 
                                                   Stretch="UniformToFill" Margin="0,0,10,0"
                                                   Source="{Binding Converter={StaticResource ImagePathConverter}}"/>

                                            <!-- Relativna putanja kako će biti u CSV-u -->
                                            <TextBlock Grid.Column="1" Text="{Binding}" VerticalAlignment="Center" 
                                                       TextWrapping="Wrap"/>

                                            <!-- Remove Button -->
                                            <Button Grid.Column="2" Content="Ukloni" 
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Odustani" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="10,0" 
                                Command="{Binding CancelReviewCommand}"/>
                        <Button Content="Sačuvaj ocenu" 
                                Style="{StaticResource SuccessButtonStyle}"
                                Margin="10,0" 
                                Command="{Binding SubmitReviewCommand}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>