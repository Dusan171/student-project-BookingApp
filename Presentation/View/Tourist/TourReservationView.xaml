<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourReservationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Tourist"
             xmlns:utils="clr-namespace:BookingApp.Utilities"
             Width="900" MinWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:BooleanToTextConverter x:Key="BooleanToTextConverter"/>
        <utils:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#F0F0F0" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E86C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1F5F8B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A4F7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer Background="#F8F9FA" VerticalScrollBarVisibility="Auto">
        <Grid MaxWidth="900" HorizontalAlignment="Center" Margin="20">
            <StackPanel>

                <!-- Header -->
                <TextBlock Text="REZERVACIJA TURE" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,20,0,30"/>

                <!-- Tour Info Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="INFORMACIJE O TURI" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Naziv:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,15,8"/>
                            <TextBlock Text="{Binding TourName}" Grid.Row="0" Grid.Column="1" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                            <TextBlock Text="Lokacija:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,15,8"/>
                            <TextBlock Text="{Binding LocationText}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Trajanje:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,15,8"/>
                            <TextBlock Text="{Binding DurationText}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Jezik:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,15,8"/>
                            <TextBlock Text="{Binding Language}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Dostupnost:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,15,0"/>
                            <TextBlock Text="{Binding AvailableSpotsText}" Grid.Row="4" Grid.Column="1" FontWeight="Bold"
                                       Foreground="{Binding AvailableSpotsColor}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Number of People Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="BROJ UČESNIKA" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>
                        <TextBlock Text="Koliko osoba ide na turu?" FontWeight="SemiBold" Margin="0,0,0,15" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="#E74C3C" CornerRadius="6" Margin="0,0,15,0">
                                <Button Content="−" Width="50" Height="40" FontSize="20" FontWeight="Bold"
                                        Foreground="White" BorderThickness="0" Background="Transparent"
                                        Command="{Binding DecreaseGuestsCommand}" Cursor="Hand"/>
                            </Border>

                            <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="6" Background="White">
                                <TextBox Text="{Binding NumberOfPeople, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="80" Height="36" FontSize="18" FontWeight="Bold" TextAlignment="Center"
                                         VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                            </Border>

                            <Border Background="#27AE60" CornerRadius="6" Margin="15,0,0,0">
                                <Button Content="+" Width="50" Height="40" FontSize="20" FontWeight="Bold"
                                        Foreground="White" BorderThickness="0" Background="Transparent"
                                        Command="{Binding IncreaseGuestsCommand}" Cursor="Hand"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Guest Details Card -->
                <Border Style="{StaticResource CardStyle}"
                        Visibility="{Binding HasGuestDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="PODACI O UČESNICIMA" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>
                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding GuestDetails}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" Padding="15" Margin="0,0,0,15" CornerRadius="8"
                                                BorderBrush="#E8E8E8" BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding IsMainContact, Converter={StaticResource BooleanToTextConverter}, ConverterParameter='Главни контакт|Учесник'}"
                                                           FontWeight="Bold" FontSize="14" Foreground="#2C3E50" Margin="0,0,0,15"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                        <TextBlock Text="Ime *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#34495E"/>
                                                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Padding="10,8" FontSize="14"
                                                                 BorderBrush="#BDC3C7" BorderThickness="1" Background="White"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                                        <TextBlock Text="Prezime *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#34495E"/>
                                                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Padding="10,8" FontSize="14"
                                                                 BorderBrush="#BDC3C7" BorderThickness="1" Background="White"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                                        <TextBlock Text="Godine *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#34495E"/>
                                                        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Padding="10,8" FontSize="14" TextAlignment="Center"
                                                                 BorderBrush="#BDC3C7" BorderThickness="1" Background="White"/>
                                                    </StackPanel>
                                                </Grid>

                                                <StackPanel Margin="0,15,0,0"
                                                            Visibility="{Binding IsMainContact, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Email *" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#34495E"/>
                                                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="10,8" FontSize="14"
                                                             BorderBrush="#BDC3C7" BorderThickness="1" Background="White"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <Border Background="#E8F4FD" BorderBrush="#2E86C1" BorderThickness="1" 
                        CornerRadius="6" Padding="15" Margin="0,0,0,20"
                        Visibility="{Binding HasStatusMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" 
                               FontSize="14" Foreground="#2C3E50" TextAlignment="Center"/>
                </Border>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="⏳ Obrađujem rezervaciju..." FontSize="14" Foreground="#7F8C8D"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,30">
                    <Button Content="Otkaži" Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,20,0" Click="CancelButton_Click"/>
                    <Button Command="{Binding ConfirmReservationCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Setter Property="Content" Value="Potvrdi rezervaciju"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Content" Value="Обрађујем..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Alternative Tours Section -->
                <Border Style="{StaticResource CardStyle}"
        Visibility="{Binding HasAlternativeTours, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="ALTERNATIVNE TURE" FontSize="16" FontWeight="Bold" 
                   Foreground="#2C3E50" Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding AlternativeTours}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10" 
                            Padding="15" CornerRadius="6" Background="#F8F9FA">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding AvailableSpotsText}" FontSize="12" 
                                           Foreground="{Binding AvailableSpotsColor}"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Odaberi" 
                                    Command="{Binding DataContext.SelectAlternativeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
