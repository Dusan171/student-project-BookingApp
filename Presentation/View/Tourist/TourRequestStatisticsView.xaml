<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourRequestStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Tourist">

    <UserControl.Resources>
       
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="8" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F6F7">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,20">

                <!-- Header -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="STATISTIKE O ZAHTEVIMA ZA TURE" FontSize="26" FontWeight="Bold"
                               Foreground="#2C3E50" Margin="0,0,0,10"/>
                    <TextBlock Text="Pregled svih vaših zahteva za ture i analiza uspešnosti" FontSize="14"
                               Foreground="#7F8C8D"/>
                </StackPanel>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Filtrirane statistike" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Period:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <ComboBox SelectedItem="{Binding SelectedYear}" ItemsSource="{Binding AvailableYears}"
                                      Width="120" Padding="10,8"/>
                            <Button Content="Generiši PDF izveštaj"
                                    Command="{Binding GenerateReportCommand}"
                                    Background="#3498DB"
                                    Style="{StaticResource AppButton}"
                                    FontSize="14"
                                    Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

               
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Procenat uspešnih zahteva" FontSize="14" FontWeight="SemiBold"
               Foreground="#34495E" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <!-- Veliki procenat -->
                        <Border Background="#E8F8F5" BorderBrush="#27AE60" BorderThickness="3"
            CornerRadius="100" Width="180" Height="180" HorizontalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding AcceptanceRate, StringFormat='{}{0:F0}%'}"
                       FontSize="42" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                                <TextBlock Text="prihvaćeno" FontSize="14" Foreground="#27AE60" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Legenda -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Prihvaćeni -->
                            <Border Grid.Column="0" Background="#27AE60" CornerRadius="8" Padding="15,10" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="Prihvaćeni" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding AcceptedCount}" FontSize="18" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Neprihvaćeni -->
                            <Border Grid.Column="1" Background="#E74C3C" CornerRadius="8" Padding="15,10" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="Neprihvaćeni" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding NotAcceptedCount}" FontSize="18" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Zahtevi po jeziku" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding LanguageStatistics}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Language}" FontSize="12"
                                                   VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <Border Grid.Column="1" Background="#E8E8E8" Height="25" CornerRadius="12"
                                                Margin="10,0">
                                            <Border Background="#3498DB" Height="25" CornerRadius="12"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"/>
                                        </Border>

                                        <TextBlock Grid.Column="2" Text="{Binding Count}" FontSize="12"
                                                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Zahtevi po lokaciji" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding LocationStatistics}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Location}" FontSize="12"
                                                   VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <Border Grid.Column="1" Background="#E8E8E8" Height="25" CornerRadius="12"
                                                Margin="10,0">
                                            <Border Background="#27AE60" Height="25" CornerRadius="12"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"/>
                                        </Border>

                                        <TextBlock Grid.Column="2" Text="{Binding Count}" FontSize="12"
                                                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
