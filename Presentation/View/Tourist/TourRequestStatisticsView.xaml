<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourRequestStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BookingApp.Presentation.ViewModel.Tourist">

    <UserControl.Resources>
       
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="8" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F6F7">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,20">

                <!-- Header -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="STATISTIKE O ZAHTEVIMA ZA TURE" FontSize="26" FontWeight="Bold"
                               Foreground="#2C3E50" Margin="0,0,0,10"/>
                    <TextBlock Text="Pregled svih vaših zahteva za ture i analiza uspešnosti" FontSize="14"
                               Foreground="#7F8C8D"/>
                </StackPanel>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Filtrirane statistike" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Period:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <ComboBox SelectedItem="{Binding SelectedYear}" ItemsSource="{Binding AvailableYears}"
                                      Width="120" Padding="10,8"/>
                            <Button Content="Generiši PDF izveštaj"
                                    Command="{Binding GenerateReportCommand}"
                                    Background="#3498DB"
                                    Style="{StaticResource AppButton}"
                                    FontSize="14"
                                    Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

               
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Opšte statistike" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Procenat uspešnih zahteva" FontSize="14" FontWeight="SemiBold"
                                           Foreground="#34495E" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                                
                                <Grid Width="200" Height="200" HorizontalAlignment="Center">
                                    <Ellipse Fill="#27AE60" Width="200" Height="200"/>
                                    <Ellipse Fill="#E74C3C" Width="200" Height="200">
                                        <Ellipse.Clip>
                                            <PathGeometry>
                                                <PathFigure StartPoint="100,100">
                                                    <LineSegment Point="100,0"/>
                                                    <ArcSegment Point="170,170" Size="100,100"
                                                                SweepDirection="Clockwise" IsLargeArc="False"/>
                                                    <LineSegment Point="100,100"/>
                                                </PathFigure>
                                            </PathGeometry>
                                        </Ellipse.Clip>
                                    </Ellipse>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AcceptanceRate, StringFormat='{}{0:F0}%'}"
                                                   FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="prihvaćeno" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Rectangle Fill="#27AE60" Width="15" Height="15" Margin="0,0,5,0"/>
                                            <TextBlock Text="Prihvaćeni: " FontSize="12"/>
                                            <TextBlock Text="{Binding AcceptedCount}" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Rectangle Fill="#E74C3C" Width="15" Height="15" Margin="0,0,5,0"/>
                                            <TextBlock Text="Neprihvaćeni: " FontSize="12"/>
                                            <TextBlock Text="{Binding NotAcceptedCount}" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                           
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Prosečan broj ljudi u prihvaćenim zahtevima" FontSize="14" FontWeight="SemiBold"
                                           Foreground="#34495E" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                                <Border Background="#E8F4FD" BorderBrush="#3498DB" BorderThickness="2"
                                        CornerRadius="10" Padding="30" HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding AveragePeopleCount, StringFormat='{}{0:F1}'}"
                                                   FontSize="48" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                        <TextBlock Text="osoba u proseku" FontSize="14" Foreground="#34495E" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Zahtevi po jeziku" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding LanguageStatistics}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Language}" FontSize="12"
                                                   VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <Border Grid.Column="1" Background="#E8E8E8" Height="25" CornerRadius="12"
                                                Margin="10,0">
                                            <Border Background="#3498DB" Height="25" CornerRadius="12"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"/>
                                        </Border>

                                        <TextBlock Grid.Column="2" Text="{Binding Count}" FontSize="12"
                                                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Zahtevi po lokaciji" FontSize="18" FontWeight="Bold"
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding LocationStatistics}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Location}" FontSize="12"
                                                   VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <Border Grid.Column="1" Background="#E8E8E8" Height="25" CornerRadius="12"
                                                Margin="10,0">
                                            <Border Background="#27AE60" Height="25" CornerRadius="12"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"/>
                                        </Border>

                                        <TextBlock Grid.Column="2" Text="{Binding Count}" FontSize="12"
                                                   FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
