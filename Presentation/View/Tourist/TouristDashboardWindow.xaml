<Window x:Class="BookingApp.Presentation.View.Tourist.TouristDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BookingApp.Presentation.View.Tourist"
        Title="BookingApp - Tourist Dashboard" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        MinHeight="600" MinWidth="1000">

    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F8FF"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsDefault" Value="True">
                    <Setter Property="Background" Value="#2E86C1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Navigation Bar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Height="70" Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Branding -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" Background="#2E86C1" CornerRadius="8" Margin="0,0,15,0">
                        <TextBlock Text="B" FontSize="24" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="BookingApp" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Tourist Panel" FontSize="12" Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Tabs -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="SearchToursTab" Content="🔍 Pretraga tura" 
                            Style="{StaticResource TabButtonStyle}" IsDefault="True"
                            Click="SearchTours_Click"/>

                    <Button x:Name="MyReservationsTab" Content="📋 Moje rezervacije" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="MyReservations_Click"/>

                    <Button x:Name="ReviewsTab" Content="⭐ Ocene i komentari" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="Reviews_Click"/>
                    <Button x:Name="TourPresenceTab" Content="📍 Praćenje tura" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="TourPresence_Click"/>

                    <Button x:Name="TourRequestsTab" Content="📝 Zahtevi za ture" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="TourRequests_Click"/>
                </StackPanel>

                <!-- User Info & Logout -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#F8F9FA" CornerRadius="20" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="24" Height="24" Fill="#2E86C1" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentUserName}" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E74C3C" CornerRadius="6" Cursor="Hand">
                        <Button Content="Odjavi se" Background="Transparent" Foreground="White"
                                Padding="15,8" FontSize="13" FontWeight="SemiBold" BorderThickness="0"
                                Click="Logout_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Background="Transparent" Margin="0,10,0,0">
            <Grid x:Name="ContentArea">
                <!-- Search Tours View (Default) -->
                <views:TourSearchView x:Name="TourSearchView" Visibility="Visible"/>

                <!-- Reservation Form View -->
                <views:TourReservationView x:Name="TourReservationView" Visibility="Collapsed"/>

               
                <views:MojeRezervacijeView x:Name="MyReservationsContent" Visibility="Collapsed"/>

                <views:TourReviewView x:Name="TourReviewViewContent" Visibility="Collapsed"/>

                <views:TourPresenceView x:Name="TourPresenceContent" Visibility="Collapsed"/>
                <views:TourRequestsView x:Name="TourRequestsContent" Visibility="Collapsed"/>

                <Border x:Name="ReviewsContent" Background="White" CornerRadius="8" 
                        Margin="20" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⭐" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Ocene i komentari" FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Ocenite ture i vodiče" FontSize="16" 
                                   Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>


            </Grid>
        </Border>
    </Grid>
</Window>