<UserControl x:Class="BookingApp.Presentation.View.Tourist.TourPresenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <UserControl.Resources>
        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Praćenje prisustva na turi"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Pratite do koje ključne tačke je stigla aktivna tura"
                       FontSize="14" Foreground="#7F8C8D"
                       Margin="0,5,0,0"/>
        </StackPanel>

        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            
            <Button Content="Osveži"
                    Command="{Binding RefreshCommand}"
                    Background="#3498DB"
                    Style="{StaticResource AppButton}"
                    FontSize="14"/>
            
        </StackPanel>

        
        <Border Grid.Row="2" Background="#FFF3CD"
                BorderBrush="#F0C674" BorderThickness="1"
                Margin="0,0,0,20" CornerRadius="6">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasUnreadNotifications}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel Margin="15">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Nova obaveštenja o prisustvu"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="#8B4513"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding UnreadNotifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    Margin="0,0,0,8" Padding="12"
                                    BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="{Binding Message}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='Vreme: {0:dd.MM.yyyy HH:mm}'}"
                                               FontSize="11"
                                               Foreground="#7F8C8D"/>
                                    <Button Content="Označi kao pročitano"
                                            HorizontalAlignment="Right"
                                            Background="#27AE60"
                                            Style="{StaticResource AppButton}"
                                            FontSize="12"
                                            Margin="0,6,0,0"
                                            Click="MarkAsReadButton_Click"
                                            Tag="{Binding Id}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        
        <Border Grid.Row="3" Background="White"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6">
            <Grid>
                
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasActivePresence}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="📍" FontSize="48" HorizontalAlignment="Center"
                               Margin="0,0,0,15" Foreground="#BDC3C7"/>
                    <TextBlock Text="Trenutno nema aktivnih tura"
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#7F8C8D" Margin="0,0,0,8"/>
                    <TextBlock Text="Prijavite se na neku turu da biste pratili njen napredak"
                               FontSize="14" Foreground="#95A5A6"
                               HorizontalAlignment="Center" TextWrapping="Wrap"
                               MaxWidth="300"/>
                </StackPanel>

                
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="20">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasActivePresence}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <ItemsControl ItemsSource="{Binding ActiveTourPresences}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA"
                                        Margin="0,0,0,15" Padding="20"
                                        BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="6">
                                    <StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Border Background="#2E86C1" Width="4" Height="40"
                                                    Margin="0,0,15,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding TourName}"
                                                           FontSize="18" FontWeight="Bold"
                                                           Foreground="#2C3E50"/>
                                                <TextBlock Text="{Binding JoinedAt, StringFormat='Pridružili ste se: {0:dd.MM.yyyy HH:mm}'}"
                                                           FontSize="12" Foreground="#7F8C8D"/>
                                            </StackPanel>
                                        </StackPanel>

                                        
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Trenutna pozicija:"
                                                           FontSize="14" FontWeight="SemiBold"
                                                           Foreground="#34495E" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding CurrentKeyPointName}"
                                                           FontSize="16" Foreground="#2E86C1"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ProgressText}"
                                                           FontSize="12" Foreground="#7F8C8D"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <Border Padding="10,5" CornerRadius="14">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPresent}" Value="True">
                                                                    <Setter Property="Background" Value="#27AE60"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsPresent}" Value="False">
                                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontSize="12" FontWeight="SemiBold"
                                                               Foreground="White">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsPresent}" Value="True">
                                                                        <Setter Property="Text" Value="Prisutan"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsPresent}" Value="False">
                                                                        <Setter Property="Text" Value="Odsutan"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        
                                        <StackPanel Margin="0,10,0,0">
                                            <TextBlock Text="Napredovanje kroz turu:"
                                                       FontSize="12" Foreground="#7F8C8D"
                                                       Margin="0,0,0,5"/>
                                            <ProgressBar Height="8" Background="#E9ECEF"
                                                         Foreground="#2E86C1"
                                                         Value="{Binding CurrentKeyPointIndex}"
                                                         Maximum="{Binding TotalKeyPoints}"/>
                                        </StackPanel>

                                        
                                        <TextBlock Text="{Binding LastUpdated, StringFormat='Poslednje ažurirano: {0:dd.MM.yyyy HH:mm}'}"
                                                   FontSize="11" Foreground="#95A5A6"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
