<UserControl x:Class="BookingApp.Presentation.View.Guest.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:loc="clr-namespace:BookingApp.Utilities"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBackgroundColor}">
    <UserControl.Resources>
        <Style TargetType="RadioButton" x:Key="SettingRadioButtonStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="20">
        <TextBlock Text="{loc:Translate Settings_Title}" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"
                   Foreground="{DynamicResource PrimaryTextColor}"/>

        <GroupBox Header="{loc:Translate Settings_Theme}" Style="{StaticResource GuestGroupBoxStyle}">
            <StackPanel>
                <TextBlock Text="{loc:Translate Settings_ThemeDescription}" Margin="0,0,0,10"
                           Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                <RadioButton Content="{loc:Translate Settings_LightTheme}" 
                             Style="{StaticResource SettingRadioButtonStyle}"
                             Command="{Binding ChangeThemeCommand}" 
                             CommandParameter="Light"
                             IsChecked="{Binding IsLightThemeChecked}"/>
                <RadioButton Content="{loc:Translate Settings_DarkTheme}" Margin="0,5,0,0"
                             Style="{StaticResource SettingRadioButtonStyle}"
                             Command="{Binding ChangeThemeCommand}" 
                             CommandParameter="Dark"
                             IsChecked="{Binding IsDarkThemeChecked}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="{loc:Translate Settings_Language}" Style="{StaticResource GuestGroupBoxStyle}">
            <StackPanel>
                <TextBlock Text="{loc:Translate Settings_LanguageDescription}" Margin="0,0,0,10" 
                           Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                <RadioButton Content="{loc:Translate Settings_English}" 
                             Style="{StaticResource SettingRadioButtonStyle}"
                             Command="{Binding ChangeLanguageCommand}"
                             CommandParameter="en-US"
                             IsChecked="{Binding IsEnglishChecked}"/>
                <RadioButton Content="{loc:Translate Settings_Serbian}" Margin="0,5,0,0" 
                             Style="{StaticResource SettingRadioButtonStyle}"
                             Command="{Binding ChangeLanguageCommand}"
                             CommandParameter="sr-LATN"
                             IsChecked="{Binding IsSerbianChecked}"/>
            </StackPanel>
        </GroupBox>

    </StackPanel>
</UserControl>