<UserControl x:Class="BookingApp.Presentation.View.Guest.AnywhereAnytimePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             
             xmlns:loc="clr-namespace:BookingApp.Utilities"
             
             d:DesignHeight="600" d:DesignWidth="1000"
             d:Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === NASLOV === -->
        <TextBlock Grid.Row="0" Text="{loc:Translate Anywhere_Title}" FontSize="32" FontWeight="Bold" Margin="20" 
                   Foreground="{DynamicResource PrimaryTextColor}"/>

        <!-- === FILTERI === -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="8" 
                BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="20,0,20,10" Padding="20">
            <StackPanel>
                <TextBlock Text="{loc:Translate Anywhere_Subtitle}" FontSize="20" Margin="0,0,0,15" 
                           Foreground="{DynamicResource PrimaryTextColor}"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10">
                        <TextBlock Text="{loc:Translate Anywhere_FilterNumGuests}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5" FontSize="16"/>
                        <TextBox Text="{Binding GuestsNumber}" Style="{StaticResource GuestTextBoxStyle}" MinWidth="180"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="{loc:Translate Anywhere_FilterDuration}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5" FontSize="16"/>
                        <TextBox Text="{Binding StayDuration}" Style="{StaticResource GuestTextBoxStyle}" MinWidth="180"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="{loc:Translate Anywhere_FilterStartDate}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5" FontSize="16"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Style="{StaticResource GuestDatePickerStyle}" MinWidth="180"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="{loc:Translate Anywhere_FilterEndDate}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5" FontSize="16"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Style="{StaticResource GuestDatePickerStyle}" MinWidth="180"/>
                    </StackPanel>
                    <Button Content="{loc:Translate Common_Search}" Style="{StaticResource PrimaryButton}" Command="{Binding SearchCommand}" VerticalAlignment="Bottom" Margin="10"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- === SEPARATOR === -->
        <Separator Grid.Row="2" Style="{StaticResource GuestSeparatorStyle}" Margin="20,5"/>

        <!-- === REZULTATI === -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
            <ListView ItemsSource="{Binding SearchResults}" 
                      BorderThickness="0" Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="8" Width="380"
                                BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="10" Padding="15">
                            <StackPanel>
                                <Grid Height="180" Margin="0,0,0,10">
                                    <Border CornerRadius="5" Background="{DynamicResource SecondaryBackgroundColor}" ClipToBounds="True">
                                        <Image Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="{Binding ImagePaths[0]}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ImagePaths.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>
                                    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImagePaths.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{loc:Translate AccomCard_ImagePlaceholder}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}"/>
                                    </Border>
                                </Grid>

                                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                                <TextBlock FontSize="16" Foreground="{DynamicResource SecondaryTextColor}">
                                    <Run Text="{Binding GeoLocation.City}"/>, <Run Text="{Binding GeoLocation.Country}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Type}" FontStyle="Italic" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,5,0,10"/>
                                <Separator Margin="0,5" Style="{StaticResource GuestSeparatorStyle}"/>
                                <Grid Margin="0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource SecondaryTextColor}"/>
                                        <TextBlock Text="{loc:Translate AccomCard_MaxGuests}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                                        <TextBlock Text="{Binding MaxGuests}" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="📅" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryTextColor}"/>
                                        <TextBlock Text="{loc:Translate AccomCard_MinDays}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                                        <TextBlock Text="{Binding MinReservationDays}" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="{loc:Translate AccomCard_ViewDetails}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                                    <Button Content="{loc:Translate AccomCard_Reserve}" 
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding DataContext.ReserveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>