<Window x:Class="BookingApp.Presentation.View.Guest.AccommodationReservationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="clr-namespace:BookingApp.Utilities"
        
        xmlns:loc="clr-namespace:BookingApp.Utilities"
        
        mc:Ignorable="d"
        Title="{loc:Translate AccomReservation_Title}" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Foreground="{DynamicResource PrimaryTextColor}"
                   TextWrapping="Wrap">
            <Run Text="{loc:Translate AccomReservation_Header}"/>
            <Run Text="{Binding AccommodationDetails.Name}" Foreground="{DynamicResource AccentPrimaryColor}"/>
        </TextBlock>

        <StackPanel Grid.Row="1">

            <GroupBox Header="{loc:Translate AccomReservation_SelectPeriod}" Style="{StaticResource GuestGroupBoxStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{loc:Translate AccomReservation_StartDate}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding StartDate}"
                                    Style="{StaticResource GuestDatePickerStyle}"
                                    MinWidth="150" 
                                    utilities:DatePickerHelper.BlackoutDatesSource="{Binding OccupiedDates}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="{loc:Translate AccomReservation_EndDate}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding EndDate}"
                                    Style="{StaticResource GuestDatePickerStyle}"
                                    MinWidth="150"
                                    utilities:DatePickerHelper.BlackoutDatesSource="{Binding OccupiedDates}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Bottom">
                        <TextBlock Text="{loc:Translate AccomReservation_Duration}" Foreground="{DynamicResource SecondaryTextColor}" TextAlignment="Center"/>
                        <TextBlock FontWeight="Bold" FontSize="20" Foreground="{DynamicResource PrimaryTextColor}" TextAlignment="Center">
                                   <Run Text="{Binding StayDuration, Mode=OneWay}"/>
                                   <Run Text="{loc:Translate AccomReservation_DaysSuffix}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="{loc:Translate AccomReservation_GuestInfo}" Style="{StaticResource GuestGroupBoxStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{loc:Translate AccomReservation_NumGuests}" 
                               Foreground="{DynamicResource SecondaryTextColor}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>
                    <TextBox Text="{Binding GuestsNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource GuestTextBoxStyle}" 
                             Width="100"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{loc:Translate AccomCard_Reserve}" Style="{StaticResource PrimaryButton}" IsDefault="True" Command="{Binding ReserveCommand}" Margin="0,0,10,0"/>
            <Button Content="{loc:Translate Common_Cancel}" Style="{StaticResource SecondaryButton}" IsCancel="True"/>
        </StackPanel>
    </Grid>

</Window>