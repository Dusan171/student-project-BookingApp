<Window x:Class="BookingApp.Presentation.View.Guest.RescheduleRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:BookingApp.Utilities"
        mc:Ignorable="d"
        Title="Request Reservation Change" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{loc:Translate Reschedule_Header}" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"
                   Foreground="{DynamicResource PrimaryTextColor}" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1">

            <GroupBox Header="{loc:Translate Reschedule_Current}" Style="{StaticResource GuestGroupBoxStyle}">
                <StackPanel>
                    <TextBlock FontSize="16" Foreground="{DynamicResource SecondaryTextColor}">
                        <Run Text="{loc:Translate Reschedule_Accommodation}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding AccommodationName, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}">
                        <Run Text="{loc:Translate Reschedule_Period}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding CurrentPeriod, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </TextBlock>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{loc:Translate Reschedule_SelectNew}" Style="{StaticResource GuestGroupBoxStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{loc:Translate Reschedule_NewStart}" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding NewStartDate}" Style="{StaticResource GuestDatePickerStyle}" MinWidth="150"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="{loc:Translate Reschedule_NewEnd}" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding NewEndDate}" Style="{StaticResource GuestDatePickerStyle}" MinWidth="150"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Bottom">
                        <TextBlock Text="{loc:Translate AccomReservation_Duration}" Foreground="{DynamicResource SecondaryTextColor}" TextAlignment="Center"/>
                        <TextBlock FontWeight="Bold" FontSize="20" Foreground="{DynamicResource PrimaryTextColor}" TextAlignment="Center">
                            <Run Text="{Binding NewStayDuration, Mode=OneWay}"/>
                            <Run Text="{loc:Translate AccomReservation_DaysSuffix}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </GroupBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{loc:Translate Reschedule_Send}" Style="{StaticResource PrimaryButton}" IsDefault="True" Command="{Binding SendRequestCommand}"/>
            <Button Content="{loc:Translate Common_Cancel}" Style="{StaticResource SecondaryButton}" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>