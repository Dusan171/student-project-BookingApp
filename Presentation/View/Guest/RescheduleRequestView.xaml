<Window x:Class="BookingApp.Presentation.View.Guest.RescheduleRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utilities="clr-namespace:BookingApp.Utilities"
        Title="Request Reservation Change" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" MinHeight="320" MinWidth="400">

    <Window.Resources>
        <!-- ... (Stilovi ostaju isti) ... -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="15">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <!-- Povezujemo dugme sa SendRequestCommand iz ViewModel-a -->
            <Button Content="Send Request" IsDefault="True" Command="{Binding SendRequestCommand}"/>
            <Button Content="Cancel" IsCancel="True"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Request to Reschedule Reservation" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <GroupBox Header="Current Reservation">
                <StackPanel Margin="5">
                    <TextBlock>
                        <Run Text="Accommodation:"/>
                        <!-- Povezujemo Text sa svojstvom iz ViewModel-a -->
                        <Run Text="{Binding AccommodationName, Mode=OneWay}" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Period:"/>
                        <Run Text="{Binding CurrentPeriod,Mode=OneWay}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Select New Dates">
                <UniformGrid Columns="2" Rows="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="New Start Date:"/>
                        <!-- Povezujemo DatePicker sa svojstvima i BlackoutDates -->
                        <DatePicker SelectedDate="{Binding NewStartDate}"
                                    utilities:DatePickerHelper.BlackoutDatesSource="{Binding BlackoutDates}"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="New End Date:"/>
                        <DatePicker SelectedDate="{Binding NewEndDate}"
                                    utilities:DatePickerHelper.BlackoutDatesSource="{Binding BlackoutDates}"/>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>

        </StackPanel>
    </DockPanel>
</Window>