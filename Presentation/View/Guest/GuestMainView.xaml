<Window x:Class="BookingApp.Presentation.View.Guest.GuestMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest Menu" 
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight" 
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Umesto Click događaja, sada koristimo Command Binding -->
        <Button Content="View Accommodations" Command="{Binding OpenAccommodationsCommand}"/>
        <Button Content="My Reservations" Command="{Binding OpenMyReservationsCommand}"/>
    </StackPanel>
</Window>