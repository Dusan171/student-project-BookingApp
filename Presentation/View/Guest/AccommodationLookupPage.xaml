<UserControl x:Class="BookingApp.Presentation.View.Guest.AccommodationLookupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:BookingApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource PrimaryBackgroundColor}"
             Unloaded="OnUnloaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{loc:Translate AccomLookup_Title}" 
                   FontSize="32" FontWeight="Bold" Margin="20" 
                   Foreground="{DynamicResource PrimaryTextColor}"/>

        <GroupBox Grid.Row="1" 
                  Header="{loc:Translate AccomLookup_FiltersHeader}" 
                  Style="{StaticResource GuestGroupBoxStyle}"
                  Padding="15" Margin="20,0,20,10">
            <GroupBox.DataContext>
                <Binding Path="SearchViewModel"/>
            </GroupBox.DataContext>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="10" MinWidth="150">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterName}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NameSearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Margin="10" MinWidth="150">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterCountry}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CountrySearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Margin="10" MinWidth="150">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterCity}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CitySearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Margin="10" MinWidth="150">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterType}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <ComboBox SelectedValue="{Binding TypeSearch}" SelectedValuePath="Content" Style="{StaticResource GuestComboBoxStyle}">
                        <ComboBoxItem Content="{loc:Translate AccomLookup_FilterTypeAll}" IsSelected="True"/>
                        <ComboBoxItem Content="{loc:Translate AccomType_Apartment}"/>
                        <ComboBoxItem Content="{loc:Translate AccomType_House}"/>
                        <ComboBoxItem Content="{loc:Translate AccomType_Cottage}"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="10" MinWidth="120">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterGuests}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding MaxGuestsSearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Margin="10" MinWidth="120">
                    <TextBlock Text="{loc:Translate AccomLookup_FilterDays}" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding MinDaysSearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>
                </StackPanel>
                <Button Content="{loc:Translate Common_Search}" Style="{StaticResource PrimaryButton}" VerticalAlignment="Bottom" Command="{Binding SearchCommand}" Margin="10"/>
                <Button Content="{loc:Translate Common_Reset}" Style="{StaticResource SecondaryButton}" VerticalAlignment="Bottom" Command="{Binding ResetSearchCommand}" Margin="10"/>
            </WrapPanel>
        </GroupBox>

        <Separator Grid.Row="2" Style="{StaticResource GuestSeparatorStyle}" Margin="20,5"/>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
            <ListView ItemsSource="{Binding Accommodations}" 
                      BorderThickness="0" Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="8" Width="380"
                                BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="10" Padding="15">
                            <StackPanel>
                                <Grid Height="180" Margin="0,0,0,10">
                                    <Border CornerRadius="5" Background="{DynamicResource SecondaryBackgroundColor}" ClipToBounds="True">
                                        <Image Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="{Binding FirstImagePath, TargetNullValue={x:Null}, FallbackValue={x:Null}}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FirstImagePath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>
                                    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FirstImagePath}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{loc:Translate AccomCard_ImagePlaceholder}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}"/>
                                    </Border>
                                </Grid>

                                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                                <TextBlock FontSize="16" Foreground="{DynamicResource SecondaryTextColor}">
                                    <Run Text="{Binding GeoLocation.City}"/>, <Run Text="{Binding GeoLocation.Country}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Type}" FontStyle="Italic" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,5,0,10"/>
                                <Separator Margin="0,5" Style="{StaticResource GuestSeparatorStyle}"/>
                                <Grid Margin="0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource SecondaryTextColor}"/>
                                        <TextBlock Text="{loc:Translate AccomCard_MaxGuests}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                                        <TextBlock Text="{Binding MaxGuests}" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="📅" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryTextColor}"/>
                                        <TextBlock Text="{loc:Translate AccomCard_MinDays}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextColor}" FontSize="16"/>
                                        <TextBlock Text="{Binding MinReservationDays}" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="{loc:Translate AccomCard_ViewDetails}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"
        Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
        CommandParameter="{Binding}"/>
                                    <Button Content="{loc:Translate AccomCard_Reserve}" 
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding DataContext.ReserveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>