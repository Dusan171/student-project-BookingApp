<Window x:Class="BookingApp.Presentation.View.Guest.AccommodationLookup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accommodation Lookup" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="400">

    <!-- Definišemo stilove na nivou prozora da izbegnemo ponavljanje (DRY princip) -->
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Glavni raspored: 3 reda (Filteri, Tabela, Dugmići) -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- GRUPA ZA FILTRIRANJE -->
        <GroupBox Header="Search Filters" Grid.Row="0" Padding="5">
            <!-- WrapPanel automatski prelama kontrole ako nema dovoljno prostora -->
            <WrapPanel Orientation="Horizontal">
                <StackPanel Margin="5">
                    <TextBlock Text="Name:"/>
                    <TextBox x:Name="NameTextBox"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Country:"/>
                    <TextBox x:Name="CountryTextBox"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="City:"/>
                    <TextBox x:Name="CityTextBox"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Type:"/>
                    <ComboBox x:Name="TypeComboBox">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="APARTMENT"/>
                        <ComboBoxItem Content="HOUSE"/>
                        <ComboBoxItem Content="COTTAGE"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Max Guests:"/>
                    <TextBox x:Name="MaxGuestsTextBox"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Min Days:"/>
                    <TextBox x:Name="MinDaysTextBox"/>
                </StackPanel>
                <Button Content="Search" VerticalAlignment="Bottom" Click="SearchButton_Click"/>
            </WrapPanel>
        </GroupBox>

        <!-- TABELA SA REZULTATIMA -->
        <!-- DataGrid sada zauzima sav dostupan prostor (*) -->
        <DataGrid x:Name="AccommodationsDataGrid" Grid.Row="1" Margin="0,10,0,0"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!-- Koristimo proporcionalne širine (*) umesto fiksnih -->
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="City" Binding="{Binding GeoLocation.City}" Width="*"/>
                <DataGridTextColumn Header="Country" Binding="{Binding GeoLocation.Country}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="Auto"/>
                <DataGridTextColumn Header="Max Guests" Binding="{Binding MaxGuests}" Width="Auto"/>
                <DataGridTextColumn Header="Min Days" Binding="{Binding MinReservationDays}" Width="Auto"/>
                <DataGridTextColumn Header="Cancel Deadline" Binding="{Binding CancellationDeadlineDays}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- GRUPA ZA AKCIJE (DUGMIĆI) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reserve" Click="ReserveButton_Click"/>
            <Button Content="Logout" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>