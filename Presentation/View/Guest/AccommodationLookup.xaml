<Window x:Class="BookingApp.Presentation.View.Guest.AccommodationLookup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accommodation Lookup" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="400">

    <Window.Resources>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Search Filters" Grid.Row="0" Padding="5">
            <GroupBox.DataContext>
                <Binding Path="SearchViewModel"/>
            </GroupBox.DataContext>
            <WrapPanel Orientation="Horizontal">

                <StackPanel Margin="5">
                    <TextBlock Text="Name:"/>
                    <TextBox Text="{Binding NameSearch, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Country:"/>
                    <TextBox Text="{Binding CountrySearch, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="City:"/>
                    <TextBox Text="{Binding CitySearch, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Type:"/>

                    <ComboBox SelectedValue="{Binding TypeSearch}" SelectedValuePath="Content">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="APARTMENT"/>
                        <ComboBoxItem Content="HOUSE"/>
                        <ComboBoxItem Content="COTTAGE"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Max Guests:"/>
                    <TextBox Text="{Binding MaxGuestsSearch, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Min Days:"/>
                    <TextBox Text="{Binding MinDaysSearch, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <Button Content="Search" VerticalAlignment="Bottom" Command="{Binding SearchCommand}"/>
                <Button Content="Reset" VerticalAlignment="Bottom" Command="{Binding ResetSearchCommand}"/>
            </WrapPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" Margin="0,10,0,0"
                  ItemsSource="{Binding Accommodations}"
                  SelectedItem="{Binding SelectedAccommodation}"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="City" Binding="{Binding GeoLocation.City}" Width="*"/>
                <DataGridTextColumn Header="Country" Binding="{Binding GeoLocation.Country}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="Auto"/>
                <DataGridTextColumn Header="Max Guests" Binding="{Binding MaxGuests}" Width="Auto"/>
                <DataGridTextColumn Header="Min Days" Binding="{Binding MinReservationDays}" Width="Auto"/>
                <DataGridTextColumn Header="Cancel Deadline" Binding="{Binding CancellationDeadlineDays}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

            <Button Content="Reserve" Command="{Binding ReserveCommand}"/>
            <Button Content="Logout" Command="{Binding LogoutCommand}"/>
        </StackPanel>
    </Grid>
</Window> 