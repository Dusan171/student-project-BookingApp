<Window x:Class="BookingApp.Presentation.View.Guest.GuestReviewDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:BookingApp.Utilities"
        mc:Ignorable="d"
        Title="Review from Owner" Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{loc:Translate GuestReview_Header}" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"
                   Foreground="{DynamicResource PrimaryTextColor}" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{loc:Translate GuestReview_Cleanliness}" FontSize="18" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CleanlinessRating}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource AccentPrimaryColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{loc:Translate GuestReview_RuleRespect}" FontSize="18" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding RuleRespectingRating}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource AccentPrimaryColor}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="{loc:Translate GuestReview_OwnerComment}" FontSize="18" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,25,0,5"/>
            <Border Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="5" Padding="15" 
                    BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" MinHeight="100">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" FontSize="16" Foreground="{DynamicResource PrimaryTextColor}"/>
                </ScrollViewer>
            </Border>

        </StackPanel>

        <Button Grid.Row="2" Content="{loc:Translate Common_OK}" Style="{StaticResource PrimaryButton}" IsDefault="True" Command="{Binding OkCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0"/>
    </Grid>
</Window>