<Window x:Class="BookingApp.Presentation.View.Guest.CreateForumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:loc="clr-namespace:BookingApp.Utilities"
        
        Title="Start a New Forum" Height="500" Width="550"
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{loc:Translate CreateForum_Header}" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource PrimaryTextColor}"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="{loc:Translate CreateForum_Location}" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GuestTextBoxStyle}"/>

            <TextBlock Text="{loc:Translate CreateForum_ForumTitle}" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,15,0,5"/>
            <TextBox Text="{Binding ForumTitle,UpdateSourceTrigger=PropertyChanged }" Style="{StaticResource GuestTextBoxStyle}"/>

            <TextBlock Text="{loc:Translate CreateForum_FirstComment}" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,15,0,5"/>
            <TextBox Text="{Binding FirstComment,UpdateSourceTrigger=PropertyChanged}" MinHeight="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Style="{StaticResource GuestTextBoxStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{loc:Translate CreateForum_CreateButton}" Style="{StaticResource PrimaryButton}" Command="{Binding CreateCommand}" IsDefault="True"/>
            <Button Content="{loc:Translate Common_Cancel}" Style="{StaticResource SecondaryButton}" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>